{
  "name": "mfl-monorepo",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "dev:apps": "pnpm run --parallel --filter './apps/*' dev",
    "dev:theleague": "pnpm --filter theleague dev",
    "dev:afl": "pnpm --filter afl-fantasy dev",
    "dev:mfl": "pnpm --filter mfl-football dev",
    "build": "pnpm run build:packages && pnpm run build:apps",
    "build:packages": "echo 'Skipping package builds for now'",
    "build:styles": "node scripts/build-styles.mjs",
    "build:tools": "node scripts/build-league-tools.mjs",
    "build:apps": "pnpm --filter './apps/*' build || astro build",
    "prebuild": "echo 'Skipping prebuild steps'",
    "fetch:all": "echo 'TODO: Create scripts/fetch-all-feeds.mjs'",
    "sync:all": "pnpm run sync:theleague && pnpm run sync:afl",
    "sync:theleague": "node scripts/sync-theleague-assets.mjs",
    "sync:afl": "node scripts/sync-afl-assets.mjs",
    "watch:theleague": "node scripts/watch-theleague-assets.mjs",
    "watch:afl": "node scripts/watch-afl-assets.mjs",
    "test": "pnpm --filter './packages/*' test",
    "type-check": "pnpm --filter './apps/*' --filter './packages/*' type-check",
    "clean": "pnpm --parallel --filter './apps/*' clean && pnpm --parallel --filter './packages/*' clean"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@astrojs/vercel": "^8.0.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "astro": "^5.1.1",
    "autoprefixer": "^10.4.14",
    "chokidar": "^3.6.0",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.34",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "react": "18.3.1",
    "sass": "^1.76.0",
    "terser": "^5.44.1",
    "typescript": "^5.9.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
