---
import type { FranchiseMetrics } from '../../utils/league-comparison-utils';
import type { Player } from '../../utils/league-comparison-utils';
import { calculateLuckScore, getTeamLogoPath } from '../../utils/league-comparison-utils';
import leagueAssets from '../../data/theleague.assets.json';

interface Props {
  metrics: FranchiseMetrics[];
  leagueAvgPoints: number;
  allPlayers: Player[];
}

const { metrics, leagueAvgPoints, allPlayers } = Astro.props;

// Calculate standard deviation and weekly averages
const WEEKS = 17;

const teamStats = metrics.map((metric) => {
  const teamPlayers = allPlayers.filter((p) => p.franchiseId === metric.franchiseId);
  const weeklyAvg = metric.totalPoints / WEEKS;

  // Calculate standard deviation of individual player points
  const playerPoints = teamPlayers.map((p) => p.points || 0);
  const meanPoints = playerPoints.reduce((a, b) => a + b, 0) / playerPoints.length || 0;
  const stdDev = Math.sqrt(
    playerPoints.reduce((sum, points) => sum + Math.pow(points - meanPoints, 2), 0) /
      playerPoints.length || 0
  );

  const luckScore = calculateLuckScore(metric.totalPoints, weeklyAvg, stdDev, leagueAvgPoints, WEEKS);

  return {
    ...metric,
    weeklyAvg,
    stdDev,
    luckScore,
  };
});

// Sort by total points
const sortedStats = [...teamStats].sort((a, b) => b.totalPoints - a.totalPoints);

const getLuckColor = (luck: number) => {
  if (luck > 0.5) return '#10b981'; // Green - lucky (overperformed)
  if (luck < -0.5) return '#ef4444'; // Red - unlucky (underperformed)
  return '#f59e0b'; // Yellow - neutral
};

const getLuckLabel = (luck: number) => {
  if (luck > 0.5) return 'Lucky ↑';
  if (luck < -0.5) return 'Unlucky ↓';
  return 'Neutral';
};
---

<div class="points-table-container">
  <table class="points-table">
    <thead>
      <tr>
        <th>Team</th>
        <th>Total Points</th>
        <th>Weekly Avg</th>
        <th>Std Dev</th>
        <th>Consistency</th>
        <th>Luck Score</th>
      </tr>
    </thead>
    <tbody>
      {
        sortedStats.map((stat, index) => {
          const logoPath = getTeamLogoPath(stat.franchiseId, leagueAssets);
          return (
            <tr class="team-row">
              <td class="team-cell">
                <span class="rank-badge">{index + 1}</span>
                <div class="team-logo-cell">
                  {logoPath ? (
                    <img src={logoPath} alt={stat.name} title={stat.name} />
                  ) : (
                    <span>{stat.name}</span>
                  )}
                </div>
              </td>
              <td class="numeric-cell">
                <strong>{Math.round(stat.totalPoints)}</strong>
              </td>
              <td class="numeric-cell">{stat.weeklyAvg.toFixed(1)}</td>
              <td class="numeric-cell">{stat.stdDev.toFixed(1)}</td>
              <td class="consistency-cell">
                <div class="consistency-bar">
                  <div
                    class="consistency-fill"
                    style={{
                      width: `${Math.min(100, (10 / stat.stdDev) * 100)}%`,
                    }}
                  />
                </div>
                <span class="consistency-label">
                  {stat.stdDev < 8 ? 'High' : stat.stdDev < 12 ? 'Medium' : 'Low'}
                </span>
              </td>
              <td class="luck-cell">
                <div
                  class="luck-badge"
                  style={{
                    backgroundColor: getLuckColor(stat.luckScore),
                  }}
                >
                  <span class="luck-score">{stat.luckScore > 0 ? '+' : ''}{stat.luckScore.toFixed(2)}</span>
                  <span class="luck-label">{getLuckLabel(stat.luckScore)}</span>
                </div>
              </td>
            </tr>
        );
        })
      }
    </tbody>
  </table>

  <div class="table-info">
    <h4>Metric Explanations</h4>
    <ul>
      <li>
        <strong>Weekly Avg:</strong> Total points divided by 17 weeks - consistency indicator
      </li>
      <li>
        <strong>Std Dev:</strong> Standard deviation of player points - higher = more volatile roster
      </li>
      <li>
        <strong>Consistency:</strong> Visual indicator of score predictability (inverse of std dev)
      </li>
      <li>
        <strong>Luck Score:</strong> Performance vs expected (league average adjusted) - positive = overperformed
      </li>
    </ul>
  </div>
</div>

<style>
