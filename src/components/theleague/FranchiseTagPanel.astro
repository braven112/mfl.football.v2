---
/**
 * FranchiseTagPanel - Display franchise tag predictions for all teams
 * Shows predicted tags, allows manual overrides, displays candidates
 * Grid layout: 4 cols → 2 cols → 1 col responsive
 */

export interface Props {
  // Props will be passed from client-side state
}
---

<div class="franchise-tag-panel">
  <div class="panel-header">
    <h2>Franchise Tag Predictions</h2>
    <p class="subtitle">Each team can designate one player as a franchise tag. Click a team to override the prediction.</p>
  </div>

  <!-- Team Cards Grid -->
  <div class="franchise-tag-grid" id="franchise-tag-grid">
    <!-- Cards will be rendered client-side -->
  </div>

  <!-- Override Modal -->
  <div class="modal-overlay hidden" id="tag-override-modal">
    <div class="modal-content tag-override-modal-content">
      <div class="modal-header">
        <h3 id="modal-team-name">Team Name</h3>
        <button class="btn-close" id="close-tag-modal" aria-label="Close">×</button>
      </div>
      <div class="modal-body" id="tag-modal-body">
        <!-- Modal body rendered client-side -->
      </div>
    </div>
  </div>
</div>

<style>
  .franchise-tag-panel {
    width: 100%;
  }

  .panel-header {
    margin-bottom: 2rem;
  }

  .panel-header h2 {
    margin: 0 0 0.5rem 0;
    font-size: 1.75rem;
    color: #2c3e50;
  }

  .subtitle {
    margin: 0;
    color: #666;
    font-size: 0.95rem;
  }

  /* Grid Layout */
  .franchise-tag-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  @media (max-width: 1200px) {
    .franchise-tag-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 900px) {
    .franchise-tag-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .franchise-tag-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Team Card */
  .franchise-tag-card {
    background: white;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 1.25rem;
    transition: all 0.2s ease;
    cursor: pointer;
    position: relative;
  }

  .franchise-tag-card:hover {
    border-color: #7c3aed;
    box-shadow: 0 4px 12px rgba(124, 58, 237, 0.1);
    transform: translateY(-2px);
  }

  .franchise-tag-card.override {
    border-color: #7c3aed;
    border-width: 3px;
    background: linear-gradient(135deg, #ffffff 0%, #f3f0ff 100%);
  }

  .franchise-tag-card.no-candidate {
    opacity: 0.6;
    cursor: default;
  }

  .franchise-tag-card.no-candidate:hover {
    border-color: #e0e0e0;
    box-shadow: none;
    transform: none;
  }

  /* Card Header */
  .card-team-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .team-logo-container {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f8f9fa;
    border-radius: 6px;
    padding: 6px;
  }

  .team-logo {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .team-info {
    flex: 1;
  }

  .team-name {
    font-weight: 700;
    font-size: 1rem;
    color: #2c3e50;
    margin: 0;
  }

  .override-badge {
    display: inline-block;
    background: #7c3aed;
    color: white;
    font-size: 0.65rem;
    font-weight: 700;
    padding: 2px 6px;
    border-radius: 3px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-top: 2px;
  }

  /* Tagged Player */
  .tagged-player {
    margin-bottom: 0.75rem;
  }

  .player-name-tag {
    font-size: 1.1rem;
    font-weight: 700;
    color: #7c3aed;
    margin: 0 0 0.25rem 0;
  }

  .player-meta-tag {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
    font-size: 0.85rem;
    color: #666;
  }

  .position-badge-tag {
    display: inline-block;
    padding: 2px 8px;
    border-radius: 4px;
    font-weight: 700;
    font-size: 0.75rem;
    text-transform: uppercase;
  }

  .position-badge-tag.QB {
    background: #fee2e2;
    color: #991b1b;
  }

  .position-badge-tag.RB {
    background: #dcfce7;
    color: #166534;
  }

  .position-badge-tag.WR {
    background: #dbeafe;
    color: #1e40af;
  }

  .position-badge-tag.TE {
    background: #fef3c7;
    color: #92400e;
  }

  /* Tag Value */
  .tag-value {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem;
    background: #f8f9fa;
    border-radius: 6px;
    margin-top: 0.75rem;
  }

  .tag-label {
    font-size: 0.75rem;
    color: #666;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
  }

  .tag-amount {
    font-size: 1rem;
    font-weight: 700;
    color: #7c3aed;
  }

  /* Confidence Indicator */
  .confidence-indicator {
    margin-top: 0.75rem;
    font-size: 0.8rem;
    color: #666;
  }

  .confidence-bar {
    height: 4px;
    background: #e0e0e0;
    border-radius: 2px;
    margin-top: 0.25rem;
    overflow: hidden;
  }

  .confidence-fill {
    height: 100%;
    background: linear-gradient(90deg, #7c3aed, #a78bfa);
    transition: width 0.3s ease;
  }

  /* No Candidate State */
  .no-candidate-message {
    text-align: center;
    padding: 1rem;
    color: #999;
    font-size: 0.9rem;
  }

  /* Modal Styles */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    padding: 1rem;
  }

  .modal-overlay.hidden {
    display: none;
  }

  .tag-override-modal-content {
    background: white;
    border-radius: 12px;
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
  }

  .modal-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid #e0e0e0;
  }

  .modal-header h3 {
    margin: 0;
    font-size: 1.5rem;
    color: #2c3e50;
  }

  .btn-close {
    background: none;
    border: none;
    font-size: 2rem;
    color: #999;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .btn-close:hover {
    background: #f0f0f0;
    color: #333;
  }

  .modal-body {
    padding: 1.5rem;
  }

  /* Candidate List */
  .candidates-list {
    margin-top: 1.5rem;
  }

  .candidates-list h4 {
    margin: 0 0 1rem 0;
    font-size: 1.1rem;
    color: #2c3e50;
  }

  .candidate-option {
    padding: 1rem;
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    margin-bottom: 0.75rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .candidate-option:hover {
    border-color: #7c3aed;
    background: #f9f9ff;
  }

  .candidate-option.selected {
    border-color: #7c3aed;
    background: linear-gradient(135deg, #ffffff 0%, #f3f0ff 100%);
  }

  .candidate-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.5rem;
  }

  .candidate-name {
    font-weight: 700;
    font-size: 1rem;
    color: #2c3e50;
  }

  .candidate-score {
    font-size: 0.85rem;
    color: #7c3aed;
    font-weight: 600;
  }

  .candidate-reasons {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
    padding-left: 1.25rem;
  }

  .candidate-reasons li {
    margin: 0.25rem 0;
  }

  /* Modal Actions */
  .modal-actions {
    display: flex;
    gap: 0.75rem;
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e0e0e0;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    flex: 1;
  }

  .btn-primary {
    background: #7c3aed;
    color: white;
  }

  .btn-primary:hover {
    background: #6d28d9;
  }

  .btn-secondary {
    background: #e0e0e0;
    color: #333;
  }

  .btn-secondary:hover {
    background: #d0d0d0;
  }

  .btn-danger {
    background: #dc2626;
    color: white;
  }

  .btn-danger:hover {
    background: #b91c1c;
  }
</style>
