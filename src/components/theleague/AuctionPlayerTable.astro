---
/**
 * AuctionPlayerTable - Display auction players with calculated prices
 * Shows player info, composite ranks, and 1-5 year contract prices
 * Supports sorting, filtering, and pagination
 */

export interface Props {
  // Props will be passed from client-side state, this is just the structure
}
---

<div class="auction-player-table-container">
  <!-- Table Header with Sort Controls -->
  <div class="table-controls">
    <div class="showing-count">
      Showing <span id="showing-start">1</span>-<span id="showing-end">50</span> of <span id="total-players">0</span> players
    </div>
    <div class="pagination-controls">
      <button class="btn btn-sm" id="prev-page" disabled>
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
        </svg>
        Previous
      </button>
      <span class="page-info">Page <span id="current-page">1</span> of <span id="total-pages">1</span></span>
      <button class="btn btn-sm" id="next-page">
        Next
        <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
          <path fill-rule="evenodd" d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
        </svg>
      </button>
    </div>
  </div>

  <!-- Desktop Table -->
  <div class="table-wrapper desktop-table">
    <table class="auction-table">
      <thead>
        <tr>
          <th class="sortable rank-col" data-sort="compositeRank" data-column="rank">
            <div class="th-content">
              Rank
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable player-name-col" data-sort="name" data-column="player">
            <div class="th-content">
              Player
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable age-col" data-sort="age" data-column="age">
            <div class="th-content">
              Age
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable value-col" data-sort="valueGap" data-column="value" title="Market Value Analysis: IV vs PMP">
            <div class="th-content">
              Value
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable price-col" data-sort="price1yr" data-column="year1" title="1-Year Contract">
            <div class="th-content">
              1
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable price-col" data-sort="price2yr" data-column="year2" title="2-Year Contract">
            <div class="th-content">
              2
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable price-col" data-sort="price3yr" data-column="year3" title="3-Year Contract">
            <div class="th-content">
              3
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable price-col" data-sort="price4yr" data-column="year4" title="4-Year Contract">
            <div class="th-content">
              4
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th class="sortable price-col" data-sort="price5yr" data-column="year5" title="5-Year Contract">
            <div class="th-content">
              5
              <span class="sort-indicator"></span>
            </div>
          </th>
          <th data-column="actions" style="width: 100px; text-align: center;">
            <div class="th-content">
              Actions
            </div>
          </th>
        </tr>
      </thead>
      <tbody id="player-table-body">
        <!-- Rows will be populated by JavaScript -->
      </tbody>
    </table>
  </div>

  <!-- Mobile Cards -->
  <div class="mobile-cards" id="mobile-cards">
    <!-- Cards will be populated by JavaScript -->
  </div>

  <!-- Player Details Modal -->
  <div class="modal" id="player-details-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h3 id="modal-player-name">Player Details</h3>
        <button class="modal-close" id="close-modal" aria-label="Close">
          <svg width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
            <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
          </svg>
        </button>
      </div>
      <div class="modal-body" id="modal-body">
        <!-- Details will be populated by JavaScript -->
      </div>
    </div>
  </div>
</div>

<style>
  .auction-player-table-container {
    width: 100%;
  }

  /* Table Controls */
  .table-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
    padding: 0.75rem 1rem;
    background: #f8f9fa;
    border-radius: 8px;
  }

  .showing-count {
    font-size: 0.9rem;
    color: #6c757d;
  }

  .pagination-controls {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .page-info {
    font-size: 0.9rem;
    color: #6c757d;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border: 1px solid #dee2e6;
    border-radius: 6px;
    background: white;
    color: #495057;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn:hover:not(:disabled) {
    background: #f8f9fa;
    border-color: #6f42c1;
    color: #6f42c1;
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .btn-sm {
    padding: 0.375rem 0.75rem;
    font-size: 0.85rem;
  }

  /* Desktop Table */
  .desktop-table {
    display: block;
  }

  .table-wrapper {
    overflow-x: auto;
    border-radius: 8px;
    border: 1px solid #dee2e6;
    background: white;
  }

  .auction-table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.9rem;
  }

  .auction-table thead {
    background: linear-gradient(120deg, var(--accent-content-bg-color) 0%, #478fd1 100%);
    color: white;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .auction-table th {
    padding: 0.75rem;
    text-align: left;
    font-weight: 600;
    white-space: nowrap;
    border-bottom: 2px solid #478fd1;
  }

  /* Match roster page column styling */
  .auction-table th[data-column='player'] {
    text-align: left !important;
    padding-left: 0.75rem;
  }

  .auction-table th[data-column^='year'] {
    text-align: right;
    padding-right: 0.5rem;
  }

  .auction-table th.sortable {
    cursor: pointer;
    user-select: none;
  }

  .auction-table th.sortable:hover {
    background: rgba(255, 255, 255, 0.1);
  }

  .th-content {
    align-items: center;
    gap: 0.5rem;
    text-align: center;
  }
  .sortable.player-name-col .th-content {
    text-align: left;
  }

  .sort-indicator {
    display: inline-block;
    width: 0;
    height: 0;
    border-left: 4px solid transparent;
    border-right: 4px solid transparent;
    opacity: 0.3;
  }

  .sort-indicator.asc {
    border-bottom: 6px solid white;
    opacity: 1;
  }

  .sort-indicator.desc {
    border-top: 6px solid white;
    opacity: 1;
  }

  /* Match roster page row styling */
  .auction-table tbody tr {
    border-bottom: 1px solid #f1f5f9;
    transition: background-color 0.2s;
  }

  .auction-table tbody tr:nth-child(even) {
    background: #f7f8fb;
  }

  .auction-table tbody tr:hover {
    background: #e5e7eb;
  }

  /* Match roster page cell padding */
  .auction-table td {
    padding: 0.75rem 0.5rem;
    vertical-align: middle;
  }

  .auction-table td[data-column='player'] {
    text-align: left !important;
    padding-left: 0.75rem;
    padding-block: 0.25rem;
    font-size: var(--table-cell-font-size, .75rem);
  }

  .auction-table td[data-column^='year'] {
    font-size: var(--table-cell-font-size, 0.75rem);
    text-align: right;
    padding-right: 0.5rem;
  }

  .player-name-col {
    min-width: 180px;
  }

  .rank-col {
    width: 60px;
    text-align: center;
  }

  .age-col {
    width: 60px;
    text-align: center;
  }

  .value-col {
    width: 90px;
    text-align: center;
  }

  .auction-table td[data-column='rank'],
  .auction-table td[data-column='age'] {
    text-align: center;
    font-size: var(--table-cell-font-size, 0.75rem);
  }

  .value-cell {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .value-badge {
    font-size: 0.75rem;
    font-weight: 600;
    padding: 0.25rem 0.5rem;
    border-radius: 12px;
    white-space: nowrap;
  }

  /* Value classification colors */
  .value-excellent .value-badge {
    background: #10b981;
    color: white;
  }

  .value-good .value-badge {
    background: #34d399;
    color: white;
  }

  .value-fair .value-badge {
    background: #9ca3af;
    color: white;
  }

  .value-slight_overpay .value-badge {
    background: #fbbf24;
    color: #78350f;
  }

  .value-overpay .value-badge {
    background: #f97316;
    color: white;
  }

  .value-avoid .value-badge {
    background: #dc2626;
    color: white;
  }

  .price-col {
    text-align: right;
    font-weight: 600;
  }

  /* Match roster page player cell */
  :global(.player-cell) {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  :global(.player-cell__avatar) {
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;
    background: #f1f5f9;
  }

  :global(.player-cell__avatar img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  :global(.player-meta) {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.85rem;
    color: #6b7280;
  }

  :global(.player-meta__logo) {
    width: 1rem;
    height: 1rem;
    flex-shrink: 0;
    object-fit: contain;
  }

  :global(.player-meta__pos) {
    font-weight: 300;
    color: #475569;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }

  .price-value {
    font-size: 0.9rem;
  }

  .price-recommended {
    color: #6f42c1;
    font-weight: 700;
  }

  .price-ufa {
    color: #dc3545;
    font-weight: 600;
  }

  .btn-details {
    padding: 0.375rem 0.75rem;
    border: 1px solid #6f42c1;
    border-radius: 6px;
    background: white;
    color: #6f42c1;
    font-size: 0.85rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-details:hover {
    background: #6f42c1;
    color: white;
  }

  /* Mobile Cards */
  .mobile-cards {
    display: none;
  }

  .player-card {
    background: white;
    border: 1px solid #dee2e6;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1rem;
  }

  .player-card-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 0.75rem;
  }

  .player-card-title {
    font-weight: 600;
    font-size: 1rem;
    color: #212529;
    margin-bottom: 0.25rem;
  }

  .player-card-meta {
    font-size: 0.85rem;
    color: #6c757d;
  }

  .player-card-prices {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
    margin-top: 0.75rem;
  }

  .price-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem;
    background: #f8f9fa;
    border-radius: 6px;
  }

  .price-label {
    font-size: 0.85rem;
    color: #6c757d;
  }

  .price-amount {
    font-weight: 600;
    color: #28a745;
  }

  /* Modal */
  .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    align-items: center;
    justify-content: center;
  }

  .modal.active {
    display: flex;
  }

  .modal-content {
    background: white;
    border-radius: 12px;
    width: 90%;
    max-width: 600px;
    max-height: 80vh;
    overflow-y: auto;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    border-bottom: 1px solid #dee2e6;
  }

  .modal-header h3 {
    margin: 0;
    font-size: 1.25rem;
    color: #212529;
  }

  .modal-close {
    background: none;
    border: none;
    color: #6c757d;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s;
  }

  .modal-close:hover {
    color: #212529;
  }

  .modal-body {
    padding: 1.5rem;
  }

  .detail-section {
    margin-bottom: 1.5rem;
  }

  .detail-section:last-child {
    margin-bottom: 0;
  }

  .detail-section h4 {
    margin: 0 0 0.75rem 0;
    font-size: 1rem;
    color: #6f42c1;
  }

  .detail-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .detail-label {
    font-size: 0.85rem;
    color: #6c757d;
  }

  .detail-value {
    font-weight: 600;
    color: #212529;
  }

  .price-explanation {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .price-explanation li {
    padding: 0.5rem;
    background: #f8f9fa;
    border-radius: 6px;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  /* Responsive */
  @media (max-width: 968px) {
    .desktop-table {
      display: none;
    }

    .mobile-cards {
      display: block;
    }

    .table-controls {
      flex-direction: column;
      gap: 1rem;
    }

    .pagination-controls {
      width: 100%;
      justify-content: center;
    }
  }

  @media (max-width: 640px) {
    .player-card-prices {
      grid-template-columns: 1fr;
    }

    .detail-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
