---
export interface Props {
  currentYear: number;
  availableYears: number[];
}

const { currentYear, availableYears } = Astro.props;
const sortedYears = [...availableYears].sort((a, b) => b - a);
---

<div class="year-selector">
  <label for="year-select" class="year-label">Season:</label>
  <select
    id="year-select"
    class="year-select"
    value={currentYear}
    onchange="window.location.search = '?year=' + this.value + (window.location.search.includes('view=') ? '&view=' + new URLSearchParams(window.location.search).get('view') : '')"
  >
    {sortedYears.map(year => (
      <option value={year} selected={year === currentYear}>
        {year}
      </option>
    ))}
  </select>
</div>

<style>
  .year-selector {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .year-label {
    font-weight: 600;
    font-size: 0.875rem;
    color: var(--color-text-primary, #1a1a1a);
    margin: 0;
  }

  .year-select {
    padding: 0.5rem 0.75rem;
    border: 2px solid var(--color-border, #d0d0d0);
    border-radius: 0.5rem;
    background-color: var(--primary-content-bg-color, #fff);
    color: var(--color-text-primary, #1a1a1a);
    font-size: 0.875rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .year-select:hover {
    border-color: var(--color-text-primary, #1a1a1a);
  }

  .year-select:focus {
    outline: none;
    border-color: var(--primary-color, #3b82f6);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
</style>
