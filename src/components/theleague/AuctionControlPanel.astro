---
/**
 * Auction Predictor Control Panel
 * 
 * Provides global controls for the auction predictor:
 * - Dynasty/Redraft weight slider (affects pricing calculations)
 * - View selector tabs (Players, Tags, Teams, Market, Rankings)
 * - Position filter dropdown
 * - Sort controls
 * - Search input
 * 
 * All changes are debounced and persisted to localStorage
 * Communicates with parent via custom events
 */

export interface Props {
  initialDynastyWeight?: number;
  initialView?: string;
  positionCounts?: Record<string, number>;
  totalPlayers?: number;
}

const { 
  initialDynastyWeight = 60,
  initialView = 'players',
  positionCounts = {},
  totalPlayers = 0
} = Astro.props;

// Calculate total players by position
const positions = ['QB', 'RB', 'WR', 'TE'];
const allPositionCount = positions.reduce((sum, pos) => sum + (positionCounts[pos] || 0), 0);
---

<div class="auction-control-panel">
  
  <!-- Top Row: Dynasty Weight Slider -->
  <div class="control-row dynasty-weight-control">
    <label for="dynasty-weight-slider" class="control-label">
      <span class="label-text">Dynasty Weight:</span>
      <span class="label-hint">Adjust pricing between dynasty rankings (long-term value) and redraft rankings (win-now)</span>
    </label>
    <div class="slider-container">
      <span class="slider-label">Redraft</span>
      <input 
        type="range" 
        id="dynasty-weight-slider"
        class="dynasty-slider"
        min="0" 
        max="100" 
        value={initialDynastyWeight}
        data-initial={initialDynastyWeight}
      />
      <span class="slider-label">Dynasty</span>
      <output id="dynasty-weight-value" class="slider-value">{initialDynastyWeight}%</output>
    </div>
  </div>

  <!-- Middle Row: View Tabs -->
  <div class="control-row view-tabs-control">
    <div class="view-tabs" role="tablist">
      <button 
        class="view-tab active" 
        data-view="players"
        role="tab"
        aria-selected="true"
        aria-controls="players-view"
      >
        <span class="tab-icon">üìä</span>
        <span class="tab-text">Players</span>
        <span class="tab-count">{totalPlayers}</span>
      </button>
      
      <button 
        class="view-tab" 
        data-view="tags"
        role="tab"
        aria-selected="false"
        aria-controls="tags-view"
      >
        <span class="tab-icon">üè∑Ô∏è</span>
        <span class="tab-text">Franchise Tags</span>
        <span class="tab-count">16</span>
      </button>
      
      <button 
        class="view-tab" 
        data-view="teams"
        role="tab"
        aria-selected="false"
        aria-controls="teams-view"
      >
        <span class="tab-icon">üí∞</span>
        <span class="tab-text">Team Cap</span>
        <span class="tab-count">16</span>
      </button>
      
      <button 
        class="view-tab" 
        data-view="market"
        role="tab"
        aria-selected="false"
        aria-controls="market-view"
      >
        <span class="tab-icon">üìà</span>
        <span class="tab-text">Market</span>
      </button>
      
      <button 
        class="view-tab" 
        data-view="rankings"
        role="tab"
        aria-selected="false"
        aria-controls="rankings-view"
      >
        <span class="tab-icon">‚¨ÜÔ∏è</span>
        <span class="tab-text">Import Rankings</span>
      </button>
    </div>
  </div>

  <!-- Bottom Row: Filters & Search (only shown on Players view) -->
  <div class="control-row filters-control" data-show-on-view="players">
    
    <!-- Position Filter -->
    <div class="filter-group">
      <label for="position-filter" class="filter-label">Position:</label>
      <select id="position-filter" class="position-filter">
        <option value="all">All Positions ({allPositionCount})</option>
        {positions.map(pos => (
          <option value={pos}>
            {pos} ({positionCounts[pos] || 0})
          </option>
        ))}
      </select>
    </div>

    <!-- Sort Controls -->
    <div class="filter-group">
      <label for="sort-by" class="filter-label">Sort By:</label>
      <select id="sort-by" class="sort-select">
        <option value="rank">Composite Rank</option>
        <option value="name">Player Name</option>
        <option value="position">Position</option>
        <option value="age">Age</option>
        <option value="price-1yr">1-Year Price</option>
        <option value="price-3yr">3-Year Price</option>
        <option value="price-5yr">5-Year Price</option>
        <option value="value">Best Value</option>
      </select>
      
      <button 
        id="sort-direction" 
        class="sort-direction-btn"
        data-direction="asc"
        aria-label="Toggle sort direction"
        title="Toggle ascending/descending"
      >
        <span class="sort-icon">‚¨ÜÔ∏è</span>
      </button>
    </div>

    <!-- Search Input -->
    <div class="filter-group search-group">
      <label for="player-search" class="filter-label">Search:</label>
      <div class="search-input-wrapper">
        <input 
          type="search"
          id="player-search"
          class="player-search"
          placeholder="Search players..."
          autocomplete="off"
        />
        <button 
          id="clear-search" 
          class="clear-search-btn hidden"
          aria-label="Clear search"
        >
          ‚úï
        </button>
      </div>
    </div>

    <!-- Results Count -->
    <div class="filter-group results-count">
      <span id="filtered-count" class="count-display">
        Showing <strong>{totalPlayers}</strong> players
      </span>
    </div>

  </div>

</div>

<style>
