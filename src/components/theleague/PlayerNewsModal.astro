---
/**
 * PlayerNewsModal - Displays latest news for a player from ESPN
 */

export interface Props {
  /** Additional CSS classes */
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={['player-news-modal', className]}>
  <div class="player-news-modal__overlay"></div>
  <div class="player-news-modal__content">
    <div class="player-news-modal__header">
      <div class="header-info">
        <h3 id="player-news-title">Latest News</h3>
        <p class="player-news-subtitle" id="news-player-info">—</p>
      </div>
      <button class="player-news-modal__close" aria-label="Close" title="Close (ESC)">
        ×
      </button>
    </div>

    <div class="player-news-modal__body">
      <div id="news-loading" class="news-status">
        <div class="spinner"></div>
        <p>Fetching latest news...</p>
      </div>
      
      <div id="news-empty" class="news-status" style="display: none;">
        <p>No recent news found for this player.</p>
      </div>

      <div id="news-list" class="news-list" style="display: none;">
        <!-- News articles will be injected here -->
      </div>
    </div>
    
    <div class="player-news-modal__footer">
      <p class="news-source">Source: ESPN News API</p>
    </div>
  </div>
</div>

<style>
  .player-news-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1100;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }

  .player-news-modal.active {
    display: flex;
  }

  .player-news-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(2px);
    cursor: pointer;
  }

  .player-news-modal__content {
    position: relative;
    background: white;
    border-radius: 16px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    width: 100%;
    max-width: 550px;
    max-height: 80vh;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    animation: modal-appear 0.3s ease-out;
  }

  @keyframes modal-appear {
    from {
      opacity: 0;
      transform: translateY(20px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .player-news-modal__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 1.5rem;
    border-bottom: 1px solid #f1f5f9;
    flex-shrink: 0;
  }

  .header-info h3 {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 700;
    color: #0f172a;
  }

  .player-news-subtitle {
    margin: 0.25rem 0 0 0;
    font-size: 0.9rem;
    color: #64748b;
    font-weight: 500;
  }

  .player-news-modal__close {
    background: #f1f5f9;
    border: none;
    font-size: 1.5rem;
    color: #64748b;
    cursor: pointer;
    padding: 0;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s ease;
  }

  .player-news-modal__close:hover {
    background: #e2e8f0;
    color: #0f172a;
    transform: rotate(90deg);
  }

  .player-news-modal__body {
    overflow-y: auto;
    flex: 1;
    padding: 0;
  }

  .news-status {
    padding: 3rem 2rem;
    text-align: center;
    color: #64748b;
  }

  .spinner {
    width: 40px;
    height: 40px;
    margin: 0 auto 1rem;
    border: 3px solid #f1f5f9;
    border-top: 3px solid #3b82f6;
    border-radius: 50%;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }

  .news-list {
    display: flex;
    flex-direction: column;
  }

  :global(.news-item) {
    padding: 1.5rem;
    border-bottom: 1px solid #f1f5f9;
    transition: background 0.2s ease;
    text-decoration: none;
    display: block;
  }

  :global(.news-item:hover) {
    background: #f8fafc;
    text-decoration: none !important;
  }

  :global(.news-item:last-child) {
    border-bottom: none;
  }

  :global(.news-item__meta) {
    display: flex;
    justify-content: space-between;
    margin-bottom: 0.5rem;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  :global(.news-item__type) {
    color: #3b82f6;
  }

  :global(.news-item__date) {
    color: #94a3b8;
  }

  :global(.news-item__headline) {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 700;
    line-height: 1.4;
    color: #1e293b;
  }

  :global(.news-item:hover .news-item__headline) {
    color: #2563eb;
  }

  :global(.news-item__description) {
    margin: 0;
    font-size: 0.95rem;
    line-height: 1.5;
    color: #475569;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .player-news-modal__footer {
    padding: 1rem 1.5rem;
    background: #f8fafc;
    border-top: 1px solid #f1f5f9;
    flex-shrink: 0;
  }

  .news-source {
    margin: 0;
    font-size: 0.75rem;
    color: #94a3b8;
    text-align: right;
    font-style: italic;
  }

  @media (max-width: 640px) {
    .player-news-modal__content {
      max-height: 90vh;
    }
  }
</style>

<script>
  function initPlayerNewsModal() {
    const modal = document.querySelector('.player-news-modal');
    const overlay = document.querySelector('.player-news-modal__overlay');
    const closeBtn = document.querySelector('.player-news-modal__close');
    const newsList = document.getElementById('news-list');
    const newsLoading = document.getElementById('news-loading');
    const newsEmpty = document.getElementById('news-empty');
    const playerInfo = document.getElementById('news-player-info');

    const closeModal = () => {
      if (modal) {
        modal.classList.remove('active');
      }
    };

    if (closeBtn) {
      closeBtn.addEventListener('click', closeModal);
    }
    if (overlay) {
      overlay.addEventListener('click', closeModal);
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && modal && modal.classList.contains('active')) {
        closeModal();
      }
    });

    window.openPlayerNewsModal = function(playerData, teamNews = []) {
      if (!modal) return;

      // Set player info
      if (playerInfo) {
        playerInfo.textContent = `${playerData.name} • ${playerData.position} • ${playerData.nflTeam}`;
      }

      // Show modal
      modal.classList.add('active');
      
      // Reset state
      if (newsLoading) newsLoading.style.display = 'block';
      if (newsEmpty) newsEmpty.style.display = 'none';
      if (newsList) {
        newsList.style.display = 'none';
        newsList.innerHTML = '';
      }

      // Simulate a small delay for "fetching" feel, though data is already local
      setTimeout(() => {
        if (newsLoading) newsLoading.style.display = 'none';

        if (!teamNews || teamNews.length === 0) {
          if (newsEmpty) newsEmpty.style.display = 'block';
          return;
        }

        if (newsList) {
          newsList.style.display = 'block';
          
          const newsHtml = teamNews.map(article => {
            const date = article.published 
              ? new Date(article.published).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })
              : 'Recent';
              
            return `
              <a href="${article.link}" target="_blank" rel="noopener noreferrer" class="news-item">
                <div class="news-item__meta">
                  <span class="news-item__type">${article.type || 'Story'}</span>
                  <span class="news-item__date">${date}</span>
                </div>
                <h4 class="news-item__headline">${article.headline}</h4>
                <p class="news-item__description">${article.description}</p>
              </a>
            `;
          }).join('');
          
          newsList.innerHTML = newsHtml;
        }
      }, 400);
    };
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initPlayerNewsModal);
  } else {
    initPlayerNewsModal();
  }
</script>
