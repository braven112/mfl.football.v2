---
import { getNFLTeamLogo } from '../../utils/nfl';

export interface Props {
  games: NFLGame[];
  timeSlot?: 'early' | 'late' | 'both';
  maxGames?: number;
  showTabs?: boolean;
}

interface NFLGame {
  id?: string;
  team1: string;
  team2: string;
  players: any[];
  playerCount?: number;
  day?: string;
  time: string;
  score?: number;
  projectedPoints?: number;
  actualPoints?: number;
}

const { games = [], timeSlot = 'both', maxGames = 4, showTabs = true } = Astro.props;

// Helper to calculate game score from players
function getGameScore(game: NFLGame): number {
  if (!game.players) return game.score || game.projectedPoints || 0;
  return game.players.reduce((total: number, p: any) => {
    const points = parseFloat(p.projectedPoints) || 0;
    return total + points;
  }, 0);
}

// Helper to determine if game is in Sunday Ticket window
function isSundayTicket(game: NFLGame): boolean {
  const day = game.day || '';
  const time = game.time || '';
  // Only include Sunday games
  if (!day.includes('Sun')) return false;
  
  // Filter for the 10am PT (1pm ET) window only for early slot
  return time.startsWith('10:'); // e.g., "10:00 AM PT"
}

// Helper to determine if game is in late time slot
function isLateTimeSlot(game: NFLGame): boolean {
  const day = game.day || '';
  const time = game.time || '';
  // Only include Sunday games
  if (!day.includes('Sun')) return false;
  
  // Filter for the 1pm PT (4pm ET) window for late slot
  return time.startsWith('1:') || time.startsWith('13:'); // e.g., "1:00 PM PT"
}

// Process games and add scores
const gamesWithScores = games.map((game: NFLGame) => {
  const score = getGameScore(game);
  return { ...game, score };
}).sort((a: NFLGame, b: NFLGame) => (b.score || 0) - (a.score || 0));

// Filter games by time slot
let earlyGames: NFLGame[] = [];
let lateGames: NFLGame[] = [];

if (timeSlot === 'early' || timeSlot === 'both') {
  earlyGames = gamesWithScores.filter(isSundayTicket).slice(0, maxGames);
}

if (timeSlot === 'late' || timeSlot === 'both') {
  lateGames = gamesWithScores.filter(isLateTimeSlot).slice(0, maxGames);
}

// Determine if we should show tabs
const shouldShowTabs = showTabs && timeSlot === 'both' && (earlyGames.length > 0 && lateGames.length > 0);

// For single time slot or when not showing tabs, use the appropriate games
let displayGames: NFLGame[] = [];
if (!shouldShowTabs) {
  if (timeSlot === 'early') {
    displayGames = earlyGames;
  } else if (timeSlot === 'late') {
    displayGames = lateGames;
  } else {
    // 'both' but not showing tabs - prioritize early games, then late
    displayGames = [...earlyGames, ...lateGames].slice(0, maxGames);
  }
}

// Helper to render multiview grid
function renderMultiViewGrid(games: NFLGame[], containerId?: string) {
  return games;
}
---

{(displayGames.length > 0 || shouldShowTabs) && (
  <div class="multiview-section">
    <div class="multiview-header">
      <h3 class="section-title">Sunday Ticket Multi-View</h3>
      <img src="/assets/tv-logos/youtube-tv-black.png" alt="YouTube TV" class="youtube-tv-logo" onerror="this.style.display='none'" />
    </div>
    
    {shouldShowTabs ? (
      <div class="multiview-tabs-container">
        <div class="multiview-tabs">
          <button class="multiview-tab active" data-tab="early">
            <span class="tab-time" data-time-pt="10:00 AM PST">10:00 AM PT</span>
            <span class="tab-label">Early Games</span>
          </button>
          <button class="multiview-tab" data-tab="late">
            <span class="tab-time" data-time-pt="1:00 PM PST">1:00 PM PT</span>
            <span class="tab-label">Late Games</span>
          </button>
        </div>
        
        <div class="multiview-content">
          <div class="multiview-tab-panel active" data-panel="early">
            <p class="section-subtitle" id="sunday-ticket-subtitle-early">Top 4 early games ranked by fantasy impact for your quad-box</p>
            <div class="multiview-grid">
              {earlyGames.map((game: NFLGame, index: number) => (
                <div class="multiview-card">
                  <div class="multiview-rank">#{index + 1}</div>
                  <div class="multiview-teams">
                    <img src={getNFLTeamLogo(game.team1, 'dark')} alt={game.team1} class="team-logo-medium" />
                    <span class="vs-text-light">@</span>
                    <img src={getNFLTeamLogo(game.team2, 'dark')} alt={game.team2} class="team-logo-medium" />
                  </div>
                  <div class="multiview-score">
                    <span class="score-value">{(game.score || 0).toFixed(1)}</span>
                    <span class="score-label">Proj Pts</span>
                  </div>
                  <div class="multiview-info">
                    {game.players?.length || game.playerCount || 0} Fantasy Players · <span class="game-time-display" data-time-pt={game.time}>{game.time}</span>
                  </div>
                </div>
              ))}
              {Array.from({ length: maxGames - earlyGames.length }).map(() => (
                <div class="multiview-card">
                  <img src="/assets/tv-logos/nfl-red-zone.png" alt="NFL RedZone" class="redzone-logo" onerror="this.style.display='none'" />
                </div>
              ))}
            </div>
          </div>
          
          <div class="multiview-tab-panel" data-panel="late">
            <p class="section-subtitle" id="sunday-ticket-subtitle-late">Top 4 late games ranked by fantasy impact for your quad-box</p>
            <div class="multiview-grid">
              {lateGames.map((game: NFLGame, index: number) => (
                <div class="multiview-card">
                  <div class="multiview-rank">#{index + 1}</div>
                  <div class="multiview-teams">
                    <img src={getNFLTeamLogo(game.team1, 'dark')} alt={game.team1} class="team-logo-medium" />
                    <span class="vs-text-light">@</span>
                    <img src={getNFLTeamLogo(game.team2, 'dark')} alt={game.team2} class="team-logo-medium" />
                  </div>
                  <div class="multiview-score">
                    <span class="score-value">{(game.score || 0).toFixed(1)}</span>
                    <span class="score-label">Proj Pts</span>
                  </div>
                  <div class="multiview-info">
                    {game.players?.length || game.playerCount || 0} Fantasy Players · <span class="game-time-display" data-time-pt={game.time}>{game.time}</span>
                  </div>
                </div>
              ))}
              {Array.from({ length: maxGames - lateGames.length }).map(() => (
                <div class="multiview-card">
                  <img src="/assets/tv-logos/nfl-red-zone.png" alt="NFL RedZone" class="redzone-logo" onerror="this.style.display='none'" />
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    ) : (
      <div>
        <p class="section-subtitle" id="sunday-ticket-subtitle">Top {maxGames} games ranked by fantasy impact for your quad-box</p>
        <div class="multiview-grid">
          {displayGames.map((game: NFLGame, index: number) => (
            <div class="multiview-card">
              <div class="multiview-rank">#{index + 1}</div>
              <div class="multiview-teams">
                <img src={getNFLTeamLogo(game.team1, 'dark')} alt={game.team1} class="team-logo-medium" />
                <span class="vs-text-light">@</span>
                <img src={getNFLTeamLogo(game.team2, 'dark')} alt={game.team2} class="team-logo-medium" />
              </div>
              <div class="multiview-score">
                <span class="score-value">{(game.score || 0).toFixed(1)}</span>
                <span class="score-label">Proj Pts</span>
              </div>
              <div class="multiview-info">
                {game.players?.length || game.playerCount || 0} Fantasy Players · <span class="game-time-display" data-time-pt={game.time}>{game.time}</span>
              </div>
            </div>
          ))}
          {Array.from({ length: maxGames - displayGames.length }).map(() => (
            <div class="multiview-card">
              <img src="/assets/tv-logos/nfl-red-zone.png" alt="NFL RedZone" class="redzone-logo" onerror="this.style.display='none'" />
            </div>
          ))}
        </div>
      </div>
    )}
  </div>
)}

<script>
  // Tab switching functionality
  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.multiview-tab');
    const panels = document.querySelectorAll('.multiview-tab-panel');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', function(this: HTMLElement) {
        const targetTab = this.getAttribute('data-tab');
        
        // Remove active class from all tabs and panels
        tabs.forEach(t => t.classList.remove('active'));
        panels.forEach(p => p.classList.remove('active'));
        
        // Add active class to clicked tab and corresponding panel
        this.classList.add('active');
        const targetPanel = document.querySelector(`[data-panel="${targetTab}"]`);
        if (targetPanel) {
          targetPanel.classList.add('active');
        }
      });
    });
  });
</script>

