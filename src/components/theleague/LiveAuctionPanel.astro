---
/**
 * Live Auction Panel
 * Displayed when Live Mode is active
 * Shows current player on block, activity feed, and price comparison
 */
---

<div class="live-auction-panel" id="liveAuctionPanel" style="display: none;">
  <!-- Header -->
  <div class="live-panel-header">
    <div class="header-content">
      <div class="live-indicator-badge">
        <span class="pulse-dot"></span>
        <span>LIVE AUCTION</span>
      </div>
      <div class="last-update" id="lastUpdate">
        Last update: <span id="lastUpdateTime">--</span>
      </div>
    </div>
    <button type="button" class="refresh-button" id="refreshButton" title="Refresh now">
      <span class="refresh-icon">‚ü≥</span>
    </button>
  </div>

  <!-- Current Player on Block -->
  <div class="current-player-section" id="currentPlayerSection">
    <h3 class="section-title">üî® Current Player on Block</h3>
    <div class="current-player-card" id="currentPlayerCard">
      <div class="no-player-message">
        <span class="placeholder-icon">‚è∏Ô∏è</span>
        <p>No active auction</p>
        <p class="placeholder-subtext">Waiting for next player to be nominated...</p>
      </div>
    </div>
  </div>

  <!-- Split View: Activity Feed & Price Comparison -->
  <div class="live-content-grid">
    <!-- Activity Feed -->
    <div class="activity-feed-section">
      <h3 class="section-title">üìã Recent Activity</h3>
      <div class="activity-feed" id="activityFeed">
        <div class="no-activity-message">
          <span class="placeholder-icon">üì≠</span>
          <p>No recent activity</p>
        </div>
      </div>
    </div>

    <!-- Price Comparison Dashboard -->
    <div class="price-comparison-section">
      <h3 class="section-title">üìä Price Accuracy</h3>
      <div class="price-comparison-stats" id="priceComparisonStats">
        <div class="stat-card">
          <div class="stat-value" id="totalAuctions">0</div>
          <div class="stat-label">Completed</div>
        </div>
        <div class="stat-card">
          <div class="stat-value" id="avgAccuracy">--%</div>
          <div class="stat-label">Avg Accuracy</div>
        </div>
        <div class="stat-card">
          <div class="stat-value" id="withinRange">0</div>
          <div class="stat-label">Within 10%</div>
        </div>
      </div>

      <div class="price-comparison-list" id="priceComparisonList">
        <div class="no-comparisons-message">
          <span class="placeholder-icon">üìà</span>
          <p>No completed auctions yet</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .live-auction-panel {
    background: linear-gradient(to bottom, #fef3c7 0%, #ffffff 10%);
    border: 2px solid #f59e0b;
    border-radius: 12px;
    padding: 24px;
    margin-bottom: 24px;
  }

  /* Header */
  .live-panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 2px solid #fde68a;
  }

  .header-content {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .live-indicator-badge {
    display: flex;
    align-items: center;
    gap: 8px;
    background: #f59e0b;
    color: white;
    padding: 8px 16px;
    border-radius: 6px;
    font-weight: 700;
    font-size: 14px;
  }

  .pulse-dot {
    width: 8px;
    height: 8px;
    background: #ef4444;
    border-radius: 50%;
    animation: pulse-dot 2s infinite;
  }

  @keyframes pulse-dot {
    0%, 100% {
      opacity: 1;
      transform: scale(1);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.3);
    }
  }

  .last-update {
    font-size: 13px;
    color: #92400e;
  }

  .refresh-button {
    background: white;
    border: 1px solid #fde68a;
    border-radius: 6px;
    padding: 8px 12px;
    cursor: pointer;
    transition: all 0.2s;
  }

  .refresh-button:hover {
    background: #fef3c7;
    border-color: #fbbf24;
  }

  .refresh-icon {
    font-size: 20px;
    display: inline-block;
    transition: transform 0.3s;
  }

  .refresh-button:active .refresh-icon {
    transform: rotate(180deg);
  }

  /* Section Titles */
  .section-title {
    font-size: 16px;
    font-weight: 600;
    color: #1f2937;
    margin: 0 0 12px 0;
  }

  /* Current Player Section */
  .current-player-section {
    margin-bottom: 24px;
  }

  .current-player-card {
    background: white;
    border: 2px solid #e5e7eb;
    border-radius: 8px;
    padding: 20px;
    min-height: 120px;
  }

  .current-player-card.active {
    border-color: #f59e0b;
    background: linear-gradient(135deg, #fffbeb 0%, white 100%);
  }

  .no-player-message {
    text-align: center;
    color: #9ca3af;
    padding: 20px;
  }

  .placeholder-icon {
    font-size: 48px;
    display: block;
    margin-bottom: 12px;
  }

  .no-player-message p {
    margin: 4px 0;
    font-size: 15px;
    font-weight: 500;
  }

  .placeholder-subtext {
    font-size: 13px !important;
    font-weight: 400 !important;
    color: #d1d5db !important;
  }

  /* Current Player Display */
  .current-player-info {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 20px;
    align-items: center;
  }

  .player-details h4 {
    font-size: 20px;
    font-weight: 700;
    color: #1f2937;
    margin: 0 0 8px 0;
  }

  .player-meta {
    display: flex;
    gap: 12px;
    font-size: 14px;
    color: #6b7280;
    margin-bottom: 12px;
  }

  .bid-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .bid-amount {
    font-size: 32px;
    font-weight: 700;
    color: #f59e0b;
    text-align: right;
  }

  .bid-label {
    font-size: 13px;
    color: #6b7280;
    text-align: right;
  }

  .current-bidder {
    font-size: 14px;
    color: #374151;
    text-align: right;
    font-weight: 500;
  }

  /* Content Grid */
  .live-content-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }

  /* Activity Feed */
  .activity-feed {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 16px;
    max-height: 400px;
    overflow-y: auto;
  }

  .no-activity-message,
  .no-comparisons-message {
    text-align: center;
    color: #9ca3af;
    padding: 40px 20px;
  }

  .activity-item {
    padding: 12px;
    border-bottom: 1px solid #f3f4f6;
    transition: background 0.2s;
  }

  .activity-item:last-child {
    border-bottom: none;
  }

  .activity-item:hover {
    background: #f9fafb;
  }

  .activity-item.new {
    background: #eff6ff;
    animation: highlight-fade 3s;
  }

  @keyframes highlight-fade {
    0% {
      background: #dbeafe;
    }
    100% {
      background: transparent;
    }
  }

  .activity-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    margin-bottom: 4px;
  }

  .activity-type {
    font-weight: 600;
    font-size: 14px;
    color: #1f2937;
  }

  .activity-time {
    font-size: 12px;
    color: #9ca3af;
  }

  .activity-details {
    font-size: 13px;
    color: #6b7280;
  }

  /* Price Comparison */
  .price-comparison-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 12px;
    margin-bottom: 16px;
  }

  .stat-card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 16px;
    text-align: center;
  }

  .stat-value {
    font-size: 24px;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 4px;
  }

  .stat-label {
    font-size: 12px;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .price-comparison-list {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 16px;
    max-height: 300px;
    overflow-y: auto;
  }

  .comparison-item {
    padding: 12px;
    border-bottom: 1px solid #f3f4f6;
  }

  .comparison-item:last-child {
    border-bottom: none;
  }

  .comparison-player {
    font-weight: 600;
    font-size: 14px;
    color: #1f2937;
    margin-bottom: 6px;
  }

  .comparison-prices {
    display: grid;
    grid-template-columns: 1fr 1fr auto;
    gap: 8px;
    font-size: 13px;
  }

  .price-predicted,
  .price-actual {
    color: #6b7280;
  }

  .price-diff {
    font-weight: 600;
  }

  .price-diff.accurate {
    color: #10b981;
  }

  .price-diff.over {
    color: #ef4444;
  }

  .price-diff.under {
    color: #3b82f6;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .live-content-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 640px) {
    .live-auction-panel {
      padding: 16px;
    }

    .live-panel-header {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }

    .header-content {
      flex-direction: column;
      align-items: flex-start;
    }

    .current-player-info {
      grid-template-columns: 1fr;
    }

    .bid-amount,
    .bid-label,
    .current-bidder {
      text-align: left;
    }

    .price-comparison-stats {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // This script will be populated by the main auction-predictor page
  // to handle live updates and data binding
  export {};
</script>
