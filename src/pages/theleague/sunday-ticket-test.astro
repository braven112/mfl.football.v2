---

<TheLeagueLayout title="Sunday Ticket Multi-View Test | The League">
  <div style="max-width: 900px; margin: 0 auto; padding: 2rem 1rem;">
    <h1>Sunday Ticket Multi-View Component Test</h1>
    
    <h2>Test 1: Both Time Slots with Tabs</h2>
    <SundayTicketMultiView 
      games={mockGames}
      timeSlot="both"
      maxGames={4}
      showTabs={true}
    />
    
    <h2>Test 2: Early Games Only</h2>
    <SundayTicketMultiView 
      games={mockGames}
      timeSlot="early"
      maxGames={4}
      showTabs={false}
    />
    
    <h2>Test 3: Late Games Only</h2>
    <SundayTicketMultiView 
      games={mockGames}
      timeSlot="late"
      maxGames={4}
      showTabs={false}
    />
    
    <h2>Test 4: Limited to 2 Games</h2>
    <SundayTicketMultiView 
      games={mockGames}
      timeSlot="early"
      maxGames={2}
      showTabs={false}
    />
  </div>
</TheLeagueLayout>