---
import fs from 'fs';
import TheLeagueLayout from '../../layouts/TheLeagueLayout.astro';

// Resolve to the project-level public folder (src/pages -> ../../public)
const spritePath = new URL('../../public/assets/icons/sprite.svg', import.meta.url);
const spriteContent = fs.readFileSync(spritePath, 'utf-8');
const iconIds = Array.from(spriteContent.matchAll(/<symbol[^>]+id="([^"]+)"/g)).map(match => match[1]);
const uniqueIconIds = Array.from(new Set(iconIds)).sort((a, b) => a.localeCompare(b));
---

<TheLeagueLayout title="Sprite Icon Gallery">
  <section class="icon-gallery">
    <header class="icon-gallery__header">
      <h1>Sprite Icon Gallery</h1>
      <p>All {uniqueIconIds.length} symbols currently registered in <code>public/assets/icons/sprite.svg</code>.</p>
    </header>

    <div class="icon-grid">
      {uniqueIconIds.map(id => (
        <article class="icon-card">
          <p class="icon-name">{id}</p>
          <div class="icon-preview">
            <svg viewBox="0 0 512 512" role="img" aria-label={id}>
              <use href={`/assets/icons/sprite.svg#${id}`}></use>
            </svg>
          </div>
        </article>
      ))}
    </div>
  </section>
</TheLeagueLayout>

<style>
  .icon-gallery {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 3rem;
  }

  .icon-gallery__header h1 {
    margin: 0 0 0.35rem;
    font-size: 2rem;
    color: #0f172a;
  }

  .icon-gallery__header p {
    margin: 0;
    color: #475569;
  }

  .icon-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
  }

  .icon-card {
    border: 1px solid #e2e8f0;
    border-radius: 12px;
    background: #ffffff;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    box-shadow: 0 8px 20px rgba(15, 23, 42, 0.05);
  }

  .icon-name {
    margin: 0;
    font-weight: 700;
    color: #0f172a;
    font-size: 0.95rem;
    word-break: break-all;
    text-align: center;
  }

  .icon-preview {
    display: grid;
    place-items: center;
    padding: 0.75rem;
    border-radius: 10px;
    background: #f8fafc;
    min-height: 140px;
  }

  .icon-preview svg {
    width: 72px;
    height: 72px;
    fill: #0f172a;
    color: #0f172a;
  }

  @media (max-width: 640px) {
    .icon-preview {
      min-height: 110px;
    }
    .icon-preview svg {
      width: 56px;
      height: 56px;
    }
  }
</style>
