---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';


export const prerender = true;
---

<Layout title="MFL.football - Responsive Fantasy League Templates">
	<main>
		<div class="hero-section">
			<h1><span class="text-gradient">MFL.football</span></h1>
			<p class="subtitle">A responsive my fantasy league template from <a href="https://www.mfladdons.com/" target="_blank">MFLaddons</a></p>
			<div class="hero-actions">
				<a href="https://www59.myfantasyleague.com/2017/home/65353" target="_blank" class="btn-primary">View Demo</a>
				<a href="/instructions" class="btn-secondary">Read Instructions</a>
			</div>
		</div>

		<section class="installation-section" id="installation">
			<h2>Quick Start</h2>
			<div class="install-steps">
				<div class="step">
					<h3>1. Choose Your Skin</h3>
					<p>In MFL commish setup, select "none" for skin</p>
				</div>
				<div class="step">
					<h3>2. Add CSS Theme</h3>
					<p>Paste one of our CSS theme URLs into "Images and Other URL's"</p>
				</div>
				<div class="step">
					<h3>3. Configure HPMs</h3>
					<p>Set up Header, Footer, and Homepage messages with our provided code</p>
				</div>
				<div class="step">
					<h3>4. Customize</h3>
					<p>Update league name, logo, and navigation to match your league</p>
				</div>
			</div>
			<p class="instructions-link">
				Want the long-form walkthrough? <a href="/instructions">Open the full instructions page</a>.
			</p>
		</section>

		<section class="themes-section">
			<h2>Available Themes</h2>
			<div class="themes-grid">
				<div class="theme-card">
					<h3>Dark Themes</h3>
					<ul>
						<li>Black with Yellow</li>
						<li>Black with Red</li>
					</ul>
				</div>
				<div class="theme-card">
					<h3>Light Themes</h3>
					<ul>
						<li>Blue and Green</li>
						<li>Blue and Red</li>
						<li>Blue and Yellow</li>
						<li>Black and Red</li>
						<li>Dark Navy and Orange</li>
						<li>Blue-Gray and Orange (SMF Style)</li>
					</ul>
				</div>
			</div>
			<div class="theme-links">
				<h3>Direct CSS Links</h3>
				<p>Use these links directly in your MFL setup:</p>
				<ul class="css-links">
					<li><a href="/assets/css/playoff-blue-green-optimized.css" target="_blank">Playoff Blue-Green Optimized CSS</a></li>
				</ul>
			</div>
		</section>



		<section class="docs-section">
			<h2>Documentation</h2>
			<div class="docs-grid">
				<a class="doc-card" href="/docs/project-overview">
					<span class="doc-title">Astro Project Overview</span>
					<span class="doc-body"
						>Understand the routes, structure, and developer commands powering the site.</span
					>
				</a>
				<a class="doc-card" href="/docs/cdn-themes">
					<span class="doc-title">CDN CSS Themes</span>
					<span class="doc-body"
						>Browse the standalone theme files and learn how to load them on any MFL site.</span
					>
				</a>
			</div>
		</section>

		<section class="support-section">
			<h2>Need Help?</h2>
			<p>MFL has a <a href="https://forums.myfantasyleague.com/forums/index.php?showtopic=35720" target="_blank">great community forum</a>, someone is usually available to help answer any questions you may have.</p>
			<p>For template-specific questions and updates, follow <a href="https://twitter.com/MFLaddons" target="_blank">@MFLaddons</a> on Twitter.</p>
		</section>
	</main>
</Layout>

<style>




	.hero-section {
		text-align: center;
		padding: 3rem 0;
		background-color: var(--inverse-content-bg);
		border-radius: 1rem;
		margin-bottom: 3rem;
		color: white;
	}

	h1 {
		font-size: 3.5rem;
		margin: 0 0 1rem 0;
		font-weight: 900;
	}

	.text-gradient {
		background: linear-gradient(45deg, #fff, var(--primary-content-border-color));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.subtitle {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.subtitle a {
		color: var(--accent-link-default-text-color);
		text-decoration: none;
		font-weight: 600;
	}

	.subtitle a:hover {
		color: var(--accent-link-hover-text-color);
		text-decoration: underline;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}


	.btn-primary,
	.btn-secondary {
		display: inline-block;
		background: var(--primary-btn-default-bg-color);
		color: var(--primary-btn-default-text-color);
		padding: 0.75rem 2rem;
		border-radius: 0.5rem;
		text-decoration: none;
		font-weight: 600;
		border: 2px solid var(--primary-btn-default-border-color);
		transition: all 0.3s ease;
	}

	.btn-primary:hover
	{
		background: var(--primary-btn-hover-bg-color);
		color: var(--primary-btn-hover-text-color);
		border: 2px solid var(--primary-btn-hover-border-color);
	}

	.btn-secondary {
		background: var(--secondary-btn-default-bg-color);
		color: var(--secondary-btn-hover-text-color);
		border: 2px solid var(--secondary-btn-default-border-color);
	}

	.btn-secondary:hover {
		background: var(--secondary-btn-hover-bg-color);
		border: 2px solid var(--secondary-btn-hover-border-color);
	}

	.features-section {
		margin-bottom: 4rem;
	}

	.features-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--primary-link-default-text-color);
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		padding: 0;
		list-style: none;
	}

	.themes-section {
		margin-bottom: 4rem;
	}

	.themes-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}

	.themes-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.theme-card {
		background: var(--primary-content-bg-color);
		padding: 2rem;
		border-radius: 1rem;
		border: 2px solid var(--primary-content-border-color);
		box-shadow: var(--primary-content-boxshadow-size) var(--primary-content-boxshadow-color);
	}

	.theme-card h3 {
		color: var(--mfl-blue);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.theme-card ul {
		list-style: none;
		padding: 0;
	}

	.theme-card li {
		padding: 0.5rem 0;
		border-bottom: 1px solid var(--primary-content-border-color);
		color: var(--primary-link-default-text-color);
	}

	.theme-card li:last-child {
		border-bottom: none;
	}

	.theme-links {
		margin-top: 2rem;
		text-align: center;
	}

	.theme-links h3 {
		color: var(--mfl-blue);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.theme-links p {
		color: var(--primary-link-default-text-color);
		margin-bottom: 1rem;
	}

	.css-links {
		list-style: none;
		padding: 0;
		display: flex;
		justify-content: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.css-links li {
		background: var(--mfl-blue);
		border-radius: 0.5rem;
		padding: 0.75rem 1.5rem;
	}

	.css-links a {
		color: white;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.9rem;
	}

	.css-links a:hover {
		color: #fbbf24;
	}

	.installation-section {
		background: linear-gradient(135deg, var(--primary-content-bg-color), var(--primary-content-bg-color));
		padding: 3rem;
		border-radius: 1rem;
		margin-bottom: 4rem;
	}

	.installation-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--primary-link-default-text-color);
	}

	.install-steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.step {
		background: var(--accent-content-bg-color);
		padding: 1.5rem;
		border-radius: 0.75rem;
		border: 1px solid var(--accent-content-border-color);
		position: relative;
	}

	.step h3 {
		color: var(--accent-content-text-color);
		margin-bottom: 0.5rem;
		font-size: 1.25rem;
	}

	.step p {
		color: var(--primary-link-default-text-color);
		margin: 0;
		line-height: 1.6;
	}

	.instructions-link {
		text-align: center;
		margin-top: 2rem;
		font-weight: 600;
	}

	.instructions-link a {
		color: var(--mfl-blue);
		text-decoration: none;
	}

	.instructions-link a:hover {
		color: var(--mfl-green);
		text-decoration: underline;
	}

	.docs-section {
		margin: 4rem 0;
		text-align: center;
	}

	.docs-section h2 {
		font-size: 2.25rem;
		color: var(--primary-link-default-text-color);
		margin-bottom: 2rem;
	}

	.docs-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
		gap: 2rem;
	}

	.doc-card {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
		background: white;
		padding: 1.75rem;
		border-radius: 1rem;
		border: 2px solid var(--secondary-content-border-color);
		bbox-shadow: var(--secondary-content-boxshadow-size) var(--secondary-content-boxshadow-color);
		color: inherit;
		text-decoration: none;
		transition: transform 0.15s ease, box-shadow 0.15s ease, border-color 0.15s ease;
	}

	.doc-card:hover {
		border-color: var(--accent-content-border-color);
		box-shadow: var(--accent-content-boxshadow-size) var(--accent-content-boxshadow-color);
	}

	.doc-title {
		font-size: 1.35rem;
		font-weight: 700;
		color: var(--mfl-blue);
	}

	.doc-body {
		font-size: 1rem;
		line-height: 1.6;
		color: rgba(15, 23, 42, 0.72);
		text-align: left;
	}

	.support-section {
		text-align: center;
		padding: 2rem;
		background: var(--primary-content-bg-color);
		border-radius: 1rem;
		border: 2px solid var(--primary-content-border-color);
	}

	.support-section h2 {
		color: var(--primary-link-default-text-color);
		margin-bottom: 1rem;
		font-size: 2rem;
	}

	.support-section p {
		margin-bottom: 1rem;
		line-height: 1.6;
		color: var(--primary-link-default-text-color);
	}

	.support-section a {
		color: var(--mfl-blue);
		text-decoration: none;
		font-weight: 600;
	}

	.support-section a:hover {
		color: var(--mfl-green);
		text-decoration: underline;
	}

	/* Responsive adjustments */
	@media (max-width: 767px) {
		h1 {
			font-size: 2.5rem;
		}

		.hero-section {
			padding: 2rem 1rem;
		}

		.installation-section {
			padding: 2rem 1rem;
		}

		.install-steps {
			grid-template-columns: 1fr;
		}

		.doc-card {
			align-items: flex-start;
		}
	}
</style>
