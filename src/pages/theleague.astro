---
import Layout from '../layouts/Layout.astro';
import leagueConfig from '../data/theleague.config.json';
import aggregatedAssets from '../data/theleague.assets.json';

export const prerender = true;

type AssetEntry = {
  type: string;
  filename: string;
  relativePath: string;
  absoluteUrl: string;
};

type TeamEntry = {
  key: string;
  slug: string;
  id?: string;
  name: string;
  assets: Record<string, AssetEntry[]>;
};

const normalizeDomain = (domain = '') => domain.replace(/\/+$/, '');
const assetDomain = normalizeDomain(leagueConfig.assetDomain || '');

const teamList: TeamEntry[] = (aggregatedAssets?.teams ?? []).map((team) => {
  const assets = Object.fromEntries(
    Object.entries(team.assets || {}).map(([folder, entries]) => [
      folder,
      entries.map(entry => ({
        ...entry,
        absoluteUrl: assetDomain
          ? `${assetDomain}${entry.relativePath}`
          : entry.relativePath
      }))
    ])
  );
  return {
    key: team.key,
    slug: team.slug,
    id: team.id,
    name: team.name,
    assets,
  };
});
---

<Layout title="The League Asset Library">
  <main class="league-gallery">
    <header class="gallery-header">
      <h1>The League Asset Library</h1>
    </header>

    {teamList.length === 0 ? (
      <p class="empty-state">No team assets found. Drop images into <code>public/assets/theleague</code> to populate this page.</p>
    ) : (
      <div class="team-grid">
        {teamList.map((team) => (
          <section class="team-card" id={team.slug}>
            <div class="team-card__header">
              <div>
                <h2>{team.name}</h2>
                {team.id && <p class="team-id">Franchise ID: {team.id}</p>}
              </div>
              <p class="team-slug">Key: {team.slug}</p>
            </div>

            <div class="asset-groups">
              {Object.entries(team.assets).map(([folder, entries]) => (
                <div class="asset-group">
                  <h3>{folder}</h3>
                  <div class="asset-list">
                    {entries.map((asset) => (
                      <article class={`asset-card asset-card--${folder}`}>
                        <img src={asset.relativePath} alt={`${team.name} ${folder}`} loading="lazy" />
                        <div class="asset-meta">
                          <p class="filename">{asset.filename}</p>
                          <label>
                            <span>URL</span>
                            <input type="text" value={asset.absoluteUrl} readonly />
                          </label>
                        </div>
                      </article>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </section>
        ))}
      </div>
    )}
  </main>
</Layout>

<style>
  :root {
    --gallery-content-bg: #eeeeee;
  }
  .league-gallery {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    padding-bottom: 3rem;
  }

  .gallery-header {
    background: var(--gallery-content-bg, #1f2937);
    color: #fff;
    padding: 1rem 1.25rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .gallery-header p {
    margin: 0.25rem 0 0;
  }

  .current-domain {
    margin: 0;
    font-weight: 600;
  }

  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(420px, 1fr));
    gap: 1.5rem;
  }

  .team-card {
    background: var(--content-bg, #fff);
    border: 1px solid var(--content-border-color, #e2e2e2);
    border-radius: 1rem;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .team-card__header {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    align-items: baseline;
  }

  .team-card__header h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  .team-id,
  .team-slug {
    margin: 0;
    font-size: 0.9rem;
    color: var(--muted-text-color, #6b7280);
  }

  .asset-groups {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .asset-group h3 {
    margin: 0 0 0.5rem 0;
    text-transform: capitalize;
    font-size: 1rem;
    color: var(--muted-text-color, #6b7280);
  }

  .asset-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 0.75rem;
  }

  .asset-card {
    border: 1px solid var(--content-border-color, #e2e2e2);
    border-radius: 0.75rem;
    padding: 0.75rem;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: var(--gallery-content-bg, #eeeeee);
  }

  .asset-card img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .asset-card--icons img {
    width: 100px;
    height: 100px;
    align-self: center;
    justify-self: center;
    object-fit: contain;
  }

  .asset-meta {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .filename {
    font-weight: 600;
    margin: 0;
  }

  label {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.85rem;
    color: var(--muted-text-color, #6b7280);
  }

  input[type="text"] {
    padding: 0.4rem 0.5rem;
    border-radius: 0.4rem;
    border: 1px solid var(--content-border-color, #d1d5db);
    font-family: var(--font-body, 'Inter', sans-serif);
    font-size: 0.85rem;
    background: #fff;
    display: block;
    width: 100%;
    box-sizing: border-box;
    overflow: hidden;
    word-break: break-all;
    text-overflow: ellipsis;
  }

  input[type="text"]:focus {
    outline: 2px solid var(--primary-content-border-color, #2563eb);
    border-color: transparent;
  }

  .empty-state {
    text-align: center;
    padding: 3rem 0;
    color: var(--muted-text-color, #6b7280);
  }

  @media (max-width: 600px) {
    .team-card__header {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
