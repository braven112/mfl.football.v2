---
import fs from 'node:fs/promises';
import path from 'node:path';
import { fileURLToPath } from 'node:url';
import Layout from '../layouts/Layout.astro';
import leagueConfig from '../data/theleague.config.json';

export const prerender = false;

const leagueAssetsDir = path.resolve(
  fileURLToPath(new URL('../../public/assets/theleague', import.meta.url))
);

type AssetEntry = {
  type: string;
  filename: string;
  relativePath: string;
  absoluteUrl: string;
};

type TeamEntry = {
  key: string;
  slug: string;
  id?: string;
  name: string;
  division?: string;
  assets: Record<string, AssetEntry[]>;
};

const normalizeDomain = (domain = '') => domain.replace(/\/+$/, '');
const assetDomain = normalizeDomain(leagueConfig.assetDomain || '');

const formatBucketLabel = (bucket: string) =>
  bucket === 'group-me'
    ? 'Group Me'
    : bucket
        .replace(/[-_]+/g, ' ')
        .replace(/\b\w/g, char => char.toUpperCase());

const fileSlug = (value = '') =>
  value
    .toString()
    .toLowerCase()
    .trim()
    .replace(/[^a-z0-9]+/g, '_')
    .replace(/^_+|_+$/g, '');

const prettifySlug = (slug = '') =>
  slug
    .replace(/[-_]+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim()
    .replace(/\b\w/g, (char: string) => char.toUpperCase());

const allowedExtensions = new Set(['.png', '.jpg', '.jpeg', '.gif', '.webp', '.svg']);

const buildTeamMeta = () => {
  const map = new Map<string, {
    slug: string;
    id: string;
    name: string;
    division?: string;
  }>();
  (leagueConfig.teams || []).forEach(team => {
    const slug =
      fileSlug(team.slug || '') ||
      fileSlug(team.name) ||
      team.franchiseId.toLowerCase();
    const entry = {
      slug,
      id: team.franchiseId,
      name: team.name || prettifySlug(slug),
      division: team.division,
    };
    const keys = [entry.slug, entry.id, ...(team.aliases ?? [])]
      .filter(Boolean)
      .map(key => fileSlug(key as string));
    keys.forEach(key => {
      if (key && !map.has(key)) {
        map.set(key, entry);
      }
    });
  });
  return map;
};

const gatherTeamAssets = async () => {
  const teamMeta = buildTeamMeta();
  const teams = new Map<string, TeamEntry>();

  const registerTeam = (slug: string, meta?: { id: string; name: string; division?: string }) => {
    if (!teams.has(slug)) {
      teams.set(slug, {
        key: slug,
        slug,
        id: meta?.id,
        name: meta?.name || prettifySlug(slug),
        division: meta?.division,
        assets: {}
      });
    }
    return teams.get(slug)!;
  };

  let directories: import('node:fs').Dirent[] = [];
  try {
    directories = await fs.readdir(leagueAssetsDir, { withFileTypes: true });
  } catch (error) {
    console.warn('[theleague] Unable to read assets directory:', error);
  }

  for (const dirent of directories) {
    if (!dirent.isDirectory()) continue;
    const folder = dirent.name;
    const folderPath = path.join(leagueAssetsDir, folder);
    let files: string[] = [];
    try {
      files = await fs.readdir(folderPath);
    } catch {
      continue;
    }

    for (const file of files) {
      const ext = path.extname(file).toLowerCase();
      if (!allowedExtensions.has(ext)) continue;

      const baseName = path.basename(file, ext);
      const normalizedKey = fileSlug(baseName);
      const meta = teamMeta.get(normalizedKey);
      const slug = meta?.slug || normalizedKey || baseName;

      if (meta?.id && baseName === meta.id) {
        continue;
      }

      const team = registerTeam(slug, meta);
      const relativePath = `/assets/theleague/${folder}/${file}`;
      const absoluteUrl = assetDomain ? `${assetDomain}${relativePath}` : relativePath;

      if (!team.assets[folder]) {
        team.assets[folder] = [];
      }

      team.assets[folder]!.push({
        type: folder,
        filename: file,
        relativePath,
        absoluteUrl
      });
    }
  }

  return Array.from(teams.values()).map(team => {
    const sortedAssets = Object.entries(team.assets)
      .sort(([a], [b]) => a.localeCompare(b))
      .map(([folder, assets]) => ([
        folder,
        assets.sort((a, b) => a.filename.localeCompare(b.filename))
      ]));

    return {
      ...team,
      assets: Object.fromEntries(sortedAssets)
    };
  }).sort((a, b) => a.name.localeCompare(b.name));
};

const teamList = await gatherTeamAssets();
---

<Layout title="The League Asset Library">
  <main class="league-gallery">
    <header class="gallery-header">
      <h1>The League Asset Library</h1>
    </header>

    {teamList.length === 0 ? (
      <p class="empty-state">No team assets found. Drop images into <code>public/assets/theleague</code> to populate this page.</p>
    ) : (
      <>
        <div class="gallery-controls">
          <label>
            <span>Sort by</span>
            <select id="team-sort">
              <option value="name">Team Name (A–Z)</option>
              <option value="franchise">Franchise ID</option>
              <option value="division">Division</option>
            </select>
          </label>
        </div>
        <div class="team-grid">
          {teamList.map((team) => (
            <section
              class="team-card"
              id={team.slug}
              data-name={team.name}
              data-franchise-id={team.id || ''}
              data-division={team.division || ''}
            >
              <div class="team-card__header">
                <div>
                  <h2>{team.name}</h2>
                  {team.id && <p class="team-id">Franchise ID: {team.id}</p>}
                  {team.division && <p class="team-division">{team.division} Division</p>}
                </div>
              </div>

              <div class="asset-groups">
                {Object.entries(team.assets).map(([folder, entries]) => (
                  <div class="asset-group">
                    <h3>{formatBucketLabel(folder)}</h3>
                    <div class="asset-list">
                      {(entries as AssetEntry[]).map((asset) => (
                        <article class={`asset-card asset-card--${folder}`}>
                          <img src={asset.relativePath} alt={`${team.name} ${folder}`} loading="lazy" />
                          <div class="asset-meta">
                            <p class="filename">{asset.filename}</p>
                            <p class="asset-dimensions">Loading size…</p>
                            <label>
                              <span>URL</span>
                              <input type="text" value={asset.absoluteUrl} readonly />
                            </label>
                          </div>
                        </article>
                      ))}
                    </div>
                  </div>
                ))}
              </div>
            </section>
          ))}
        </div>
      </>
    )}
  </main>

  {teamList.length > 0 && (
    <script is:inline>
      (() => {
        const divisionOrder = ['Northwest', 'Southwest', 'Central', 'East'];
        const select = document.querySelector('#team-sort');
        const grid = document.querySelector('.team-grid');
        if (!select || !grid) return;
        const baseCards = Array.from(grid.children);

        const sorters = {
          name: (cards) =>
            [...cards].sort((a, b) =>
              (a.dataset.name || '').localeCompare(b.dataset.name || '', undefined, { sensitivity: 'base' })
            ),
          franchise: (cards) =>
            [...cards].sort((a, b) =>
              (a.dataset.franchiseId || '').localeCompare(b.dataset.franchiseId || '')
            ),
          division: (cards) =>
            [...cards].sort((a, b) => {
              const divA = divisionOrder.indexOf(a.dataset.division || '');
              const divB = divisionOrder.indexOf(b.dataset.division || '');
              if (divA !== divB) return divA - divB;
              return (a.dataset.name || '').localeCompare(b.dataset.name || '', undefined, { sensitivity: 'base' });
            }),
        };

        const applySort = (key) => {
          const sorter = sorters[key] || sorters.name;
          const sortedCards = sorter(baseCards);
          grid.replaceChildren(...sortedCards);
        };

        const updateDimensions = (img) => {
          const meta = img.closest('.asset-card')?.querySelector('.asset-dimensions');
          if (!meta) return;
          if (img.naturalWidth && img.naturalHeight) {
            meta.textContent = `${img.naturalWidth} × ${img.naturalHeight}px`;
          } else {
            meta.textContent = 'Size unavailable';
          }
        };

        const initDimensions = () => {
          document.querySelectorAll('.asset-card img').forEach((img) => {
            if (img.complete && img.naturalWidth) {
              updateDimensions(img);
            } else {
              img.addEventListener('load', () => updateDimensions(img), { once: true });
              img.addEventListener('error', () => {
                const meta = img.closest('.asset-card')?.querySelector('.asset-dimensions');
                if (meta) meta.textContent = 'Failed to load';
              }, { once: true });
            }
          });
        };

        applySort(select.value);
        select.addEventListener('change', (event) => applySort(event.target.value));
        initDimensions();
      })();
    </script>
  )}
</Layout>

