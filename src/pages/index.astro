---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';

// Import one of your theme CSS files
import '../assets/css/playoff-blue-green-optimized.css';

export const prerender = true;
---

<Layout title="MFL.football - Responsive Fantasy League Templates">
	<main>
		<div class="hero-section">
			<h1><span class="text-gradient">MFL.football</span></h1>
			<p class="subtitle">A responsive my fantasy league template from <a href="https://www.mfladdons.com/" target="_blank">MFLaddons</a></p>
			<div class="hero-actions">
				<a href="https://www59.myfantasyleague.com/2017/home/65353" target="_blank" class="btn-demo">View Demo</a>
				<a href="/instructions" class="btn-instructions">Read Instructions</a>
			</div>
		</div>

		<section class="features-section">
			<h2>Template Features</h2>
			<ul role="list" class="link-card-grid">
				<Card
					href="/instructions"
					title="Easy Installation"
					body="Step-by-step instructions to install the template on your MFL site with multiple color themes."
				/>
				<Card
					href="#themes"
					title="Multiple Themes"
					body="Choose from dark and light themes including black-yellow, blue-green, and custom color schemes."
				/>
				<Card
					href="#responsive"
					title="Fully Responsive"
					body="Optimized for all devices - desktop, tablet, and mobile with Bootstrap grid system."
				/>
				<Card
					href="#customization"
					title="Easy Customization"
					body="Customize league name, logo, navigation, and modules to match your league's identity."
				/>
			</ul>
		</section>

		<section class="themes-section">
			<h2>Available Themes</h2>
			<div class="themes-grid">
				<div class="theme-card">
					<h3>Dark Themes</h3>
					<ul>
						<li>Black with Yellow</li>
						<li>Black with Red</li>
					</ul>
				</div>
				<div class="theme-card">
					<h3>Light Themes</h3>
					<ul>
						<li>Blue and Green</li>
						<li>Blue and Red</li>
						<li>Blue and Yellow</li>
						<li>Black and Red</li>
						<li>Dark Navy and Orange</li>
						<li>Blue-Gray and Orange (SMF Style)</li>
					</ul>
				</div>
			</div>
		</section>

		<section class="installation-section" id="installation">
			<h2>Quick Start</h2>
			<div class="install-steps">
				<div class="step">
					<h3>1. Choose Your Skin</h3>
					<p>In MFL commish setup, select "none" for skin</p>
				</div>
				<div class="step">
					<h3>2. Add CSS Theme</h3>
					<p>Paste one of our CSS theme URLs into "Images and Other URL's"</p>
				</div>
				<div class="step">
					<h3>3. Configure HPMs</h3>
					<p>Set up Header, Footer, and Homepage messages with our provided code</p>
				</div>
				<div class="step">
					<h3>4. Customize</h3>
					<p>Update league name, logo, and navigation to match your league</p>
				</div>
			</div>
			<p class="instructions-link">
				Want the long-form walkthrough? <a href="/instructions">Open the full instructions page</a>.
			</p>
		</section>

		<section class="support-section">
			<h2>Need Help?</h2>
			<p>MFL has a <a href="https://forums.myfantasyleague.com/forums/index.php?showtopic=35720" target="_blank">great community forum</a>, someone is usually available to help answer any questions you may have.</p>
			<p>For template-specific questions and updates, follow <a href="https://twitter.com/MFLaddons" target="_blank">@MFLaddons</a> on Twitter.</p>
		</section>
	</main>
</Layout>

<style>
	:root {
		--mfl-gradient: linear-gradient(135deg, #2563eb, #059669);
		--mfl-blue: #2563eb;
		--mfl-green: #059669;
		--mfl-dark: #1e293b;
		--mfl-light: #f8fafc;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 80ch;
	}

	.hero-section {
		text-align: center;
		padding: 3rem 0;
		background: linear-gradient(135deg, var(--mfl-blue), var(--mfl-green));
		border-radius: 1rem;
		margin-bottom: 3rem;
		color: white;
	}

	h1 {
		font-size: 3.5rem;
		margin: 0 0 1rem 0;
		font-weight: 900;
	}

	.text-gradient {
		background: linear-gradient(45deg, #fff, #e2e8f0);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 100% 200%;
		animation: pulse 4s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			background-position-y: 0%;
		}
		50% {
			background-position-y: 80%;
		}
	}

	.subtitle {
		font-size: 1.25rem;
		margin-bottom: 2rem;
		opacity: 0.9;
	}

	.subtitle a {
		color: #fbbf24;
		text-decoration: none;
		font-weight: 600;
	}

	.subtitle a:hover {
		text-decoration: underline;
	}

	.hero-actions {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.btn-demo,
	.btn-instructions {
		display: inline-block;
		background: rgba(255, 255, 255, 0.2);
		color: white;
		padding: 0.75rem 2rem;
		border-radius: 0.5rem;
		text-decoration: none;
		font-weight: 600;
		border: 2px solid rgba(255, 255, 255, 0.3);
		transition: all 0.3s ease;
	}

	.btn-demo:hover,
	.btn-instructions:hover {
		background: rgba(255, 255, 255, 0.3);
		border-color: rgba(255, 255, 255, 0.5);
	}

	.btn-instructions {
		background: rgba(15, 23, 42, 0.75);
		border-color: rgba(15, 23, 42, 0.6);
	}

	.btn-instructions:hover {
		border-color: rgba(15, 23, 42, 0.4);
	}

	.features-section {
		margin-bottom: 4rem;
	}

	.features-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--mfl-dark);
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
		gap: 1.5rem;
		padding: 0;
		list-style: none;
	}

	.themes-section {
		margin-bottom: 4rem;
	}

	.themes-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--mfl-dark);
	}

	.themes-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.theme-card {
		background: var(--mfl-light);
		padding: 2rem;
		border-radius: 1rem;
		border: 2px solid #e2e8f0;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
	}

	.theme-card h3 {
		color: var(--mfl-blue);
		margin-bottom: 1rem;
		font-size: 1.5rem;
	}

	.theme-card ul {
		list-style: none;
		padding: 0;
	}

	.theme-card li {
		padding: 0.5rem 0;
		border-bottom: 1px solid #e2e8f0;
		color: var(--mfl-dark);
	}

	.theme-card li:last-child {
		border-bottom: none;
	}

	.installation-section {
		background: linear-gradient(135deg, #f1f5f9, #e2e8f0);
		padding: 3rem;
		border-radius: 1rem;
		margin-bottom: 4rem;
	}

	.installation-section h2 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
		color: var(--mfl-dark);
	}

	.install-steps {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
		gap: 2rem;
	}

	.step {
		background: white;
		padding: 1.5rem;
		border-radius: 0.75rem;
		border: 2px solid var(--mfl-blue);
		position: relative;
	}

	.step h3 {
		color: var(--mfl-blue);
		margin-bottom: 0.5rem;
		font-size: 1.25rem;
	}

	.step p {
		color: var(--mfl-dark);
		margin: 0;
		line-height: 1.6;
	}

	.instructions-link {
		text-align: center;
		margin-top: 2rem;
		font-weight: 600;
	}

	.instructions-link a {
		color: var(--mfl-blue);
		text-decoration: none;
	}

	.instructions-link a:hover {
		color: var(--mfl-green);
		text-decoration: underline;
	}

	.support-section {
		text-align: center;
		padding: 2rem;
		background: var(--mfl-light);
		border-radius: 1rem;
		border: 2px solid #e2e8f0;
	}

	.support-section h2 {
		color: var(--mfl-dark);
		margin-bottom: 1rem;
		font-size: 2rem;
	}

	.support-section p {
		margin-bottom: 1rem;
		line-height: 1.6;
		color: var(--mfl-dark);
	}

	.support-section a {
		color: var(--mfl-blue);
		text-decoration: none;
		font-weight: 600;
	}

	.support-section a:hover {
		color: var(--mfl-green);
		text-decoration: underline;
	}

	/* Responsive adjustments */
	@media (max-width: 768px) {
		h1 {
			font-size: 2.5rem;
		}
		
		.hero-section {
			padding: 2rem 1rem;
		}
		
		.installation-section {
			padding: 2rem 1rem;
		}
		
		.install-steps {
			grid-template-columns: 1fr;
		}
	}
</style>
