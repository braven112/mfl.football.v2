import Layout from '../layouts/Layout.astro';
import leagueAssets from '../data/theleague.assets.json';

const salarySummaryModules = import.meta.glob(
  '../data/mfl-salary-averages-*.json',
  { eager: true }
);
const playerSalaryModules = import.meta.glob(
  '../data/mfl-player-salaries-*.json',
  { eager: true }
);

const extensionPositions = [
  { key: 'QB', label: 'Quarterback' },
  { key: 'RB', label: 'Running Back' },
  { key: 'WR', label: 'Wide Receiver' },
  { key: 'TE', label: 'Tight End' },
  { key: 'PK', label: 'Kicker' },
];

const salaryTabs = [2, 3, 4];

const currencyFormatter = new Intl.NumberFormat('en-US', {
  style: 'currency',
  currency: 'USD',
  maximumFractionDigits: 0,
});

const franchiseMetaMap = new Map(
  (leagueAssets.teams ?? []).map((team) => {
    const aliases = team.aliases ?? [];
    const tokens = [
      team.name,
      team.slug,
      team.key,
      team.id,
      ...aliases,
    ]
      .filter(Boolean)
      .map((value) => value.toLowerCase());

    return [
      team.id,
      {
        name: team.name,
        icon: team.assets?.icons?.[0]?.relativePath,
        tokens,
      },
    ];
  })
);

const getModuleData = (mod) =>
  mod && typeof mod === 'object' && 'default' in mod ? mod.default : mod;

const extractSeason = (filepath) => {
  const match = filepath.match(/(\d{4})\.json$/);
  return match ? match[1] : null;
};

const buildPlayerChoices = (playerData: any = {}) =>
  (playerData.players ?? []).map((player: any) => {
    const contractYears =
      Number.parseInt(player.contractYear ?? player.contractYearRemaining ?? '0', 10) || 0;
    const franchiseMeta: any =
      (franchiseMetaMap.get(player.franchiseId) as any) ??
      (franchiseMetaMap.get(player.franchise_id) as any) ?? {};
    const teamName = franchiseMeta?.name || player.franchiseId || 'Free Agent';
    const nflTeam =
      (player.team ?? franchiseMeta?.nflTeam ?? franchiseMeta?.key ?? '').toUpperCase();
    const icon = franchiseMeta?.icon || null;
    const teamTokens = franchiseMeta?.tokens ?? [];
    const label = `${player.name} (${player.position}) – ${teamName}`;
    const searchBlob = [player.name, player.position, teamName, player.team, ...teamTokens]
      .filter(Boolean)
      .map((value) => value.toLowerCase())
      .join(' ');
    return {
      id: player.id,
      name: player.name,
      position: player.position,
      salary: player.salary,
      franchiseId: player.franchiseId,
      contractYears,
      teamName,
      nflTeam,
      icon,
      label,
      teamTokens,
      searchBlob,
      points: player.points ?? 0,
      draftYear: player.draftYear ?? null,
    };
  });

const salarySummaryBySeason = {};
Object.entries(salarySummaryModules).forEach(([path, mod]) => {
  const season = extractSeason(path);
  if (season) salarySummaryBySeason[season] = getModuleData(mod);
});

const playerSalariesBySeason = {};
Object.entries(playerSalaryModules).forEach(([path, mod]) => {
  const season = extractSeason(path);
  if (season) playerSalariesBySeason[season] = getModuleData(mod);
});

const seasonsPayload = {};
let seasonOrder = Object.keys(playerSalariesBySeason)
  .filter((season) => salarySummaryBySeason[season])
  .sort((a, b) => Number(b) - Number(a));

seasonOrder.forEach((season) => {
  const summary = salarySummaryBySeason[season];
  const playersData = playerSalariesBySeason[season];
  if (!summary || !playersData) return;
  const extensionSalariesBySeason = extensionPositions.reduce((acc, { key }) => {
    acc[key] = summary.positions?.[key]?.top5Average ?? 0;
    return acc;
  }, {});
  const franchiseSalariesBySeason = extensionPositions.reduce((acc, { key }) => {
    acc[key] = summary.positions?.[key]?.top3Average ?? 0;
    return acc;
  }, {});
  seasonsPayload[season] = {
    extensionSalaries: extensionSalariesBySeason,
    franchiseSalaries: franchiseSalariesBySeason,
    players: buildPlayerChoices(playersData),
    metadata: summary.metadata ?? { season },
  };
});

const latestActualSeason = seasonOrder[0] ?? null;

const PROJECTION_GROWTH_RATE = 0.1;
const MAX_PROJECTED_SEASON = 2029;

const baseProjectionSeason = latestActualSeason;
const projectedSeasons = [];
if (baseProjectionSeason && seasonsPayload[baseProjectionSeason]) {
  const baseYear = Number(baseProjectionSeason);
  const baseSeasonData = seasonsPayload[baseProjectionSeason];
  const basePlayers = baseSeasonData.players ?? [];

  for (
    let targetYear = baseYear + 1;
    targetYear <= MAX_PROJECTED_SEASON;
    targetYear++
  ) {
    const yearsAhead = targetYear - baseYear;
    const multiplier = Number(
      Math.pow(1 + PROJECTION_GROWTH_RATE, yearsAhead).toFixed(6)
    );

    const projectedPlayers = basePlayers
      .map((player) => {
        const nextContractYears = Math.max(
          (player.contractYears ?? 0) - yearsAhead,
          0
        );
        if (nextContractYears <= 0) return null;
        const projectedSalary = Math.round((player.salary ?? 0) * multiplier);
        return {
          ...player,
          salary: projectedSalary,
          contractYears: nextContractYears,
          projectedFromSeason: baseProjectionSeason,
          projectedYearsAhead: yearsAhead,
        };
      })
      .filter(Boolean);

    if (!projectedPlayers.length) break;

    const scaleSalaries = (source = {}) => {
      const scaled = {};
      extensionPositions.forEach(({ key }) => {
        const value = source[key] ?? 0;
        scaled[key] = Math.round(value * multiplier);
      });
      return scaled;
    };

    const projectedSeasonKey = String(targetYear);
    seasonsPayload[projectedSeasonKey] = {
      extensionSalaries: scaleSalaries(baseSeasonData.extensionSalaries ?? {}),
      franchiseSalaries: scaleSalaries(baseSeasonData.franchiseSalaries ?? {}),
      players: projectedPlayers,
      metadata: {
        season: projectedSeasonKey,
        projected: true,
        baseSeason: baseProjectionSeason,
        yearsAhead,
      },
    };
    projectedSeasons.push(projectedSeasonKey);
  }
}

if (projectedSeasons.length) {
  seasonOrder = [...seasonOrder, ...projectedSeasons].sort(
    (a, b) => Number(b) - Number(a)
  );
}

const defaultSeason = latestActualSeason ?? seasonOrder.at(-1) ?? '2024';
const blankSalaries = extensionPositions.reduce((acc, { key }) => {
  acc[key] = 0;
  return acc;
}, {});
const initialSeasonData = seasonsPayload[defaultSeason] ?? {
  extensionSalaries: blankSalaries,
  franchiseSalaries: blankSalaries,
  players: [],
};

const serializedConfig = JSON.stringify({
  salaryTabs,
  seasons: seasonsPayload,
  defaultSeason,
  seasonOptions: seasonOrder,
  positionKeys: extensionPositions.map(({ key }) => key),
  latestActualSeason,
});
