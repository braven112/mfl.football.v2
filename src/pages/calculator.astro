<Layout title="Contract Tools">
  <section class="calculator">
    <div class="calculator__card" id="rookie-extension-calculator">
      <h1>Contract Tools</h1>

      <div class="season-select">
        <label class="field-label" for="seasonSelect">Season:</label>
        <select id="seasonSelect" class="season-select__control">
          {seasonOrder.map((season) => {
            const seasonMeta = seasonsPayload[season]?.metadata ?? {};
            const label = seasonMeta.projected ? `${season}*` : season;
            return (
              <option value={season} selected={season === defaultSeason}>
                {label}
              </option>
            );
          })}
        </select>
        <span class="season-select__hint">* Projected values (10% annual growth)</span>
      </div>

      <label class="field-label">Contract Type:</label>
      <div class="toggle-switch toggle-switch--grid">
        <input type="radio" id="franExt" name="extType" value="franchise" checked />
        <label for="franExt">Franchise Tag</label>
        <input type="radio" id="transExt" name="extType" value="transition" />
        <label for="transExt">Veteran Extension</label>
        <input type="radio" id="rookieExt" name="extType" value="rookie" />
        <label for="rookieExt">Rookie Extension</label>
      </div>

      <div class="player-field-header">
        <label class="field-label" for="playerSearch">Find Player:</label>
      </div>
      <div class="player-search-wrapper">
        <input
          type="text"
          id="playerSearch"
          class="player-search"
          placeholder="Start typing a name or team..."
          autocomplete="off"
        />
        <button type="button" class="clear-input-btn" id="clearPlayerBtn" aria-label="Clear search">×</button>
        <div class="player-suggestions hidden" id="playerSuggestions"></div>
      </div>
      <div class="player-details hidden">
        <p class="field-hint">
          Selecting a player auto-fills the salary below. Manual overrides are available if needed.
        </p>
        <p class="selected-player hidden" id="selectedPlayerDisplay"></p>

        <div class="manual-salary" id="manualSalaryPanel">
          <button
            type="button"
            class="manual-salary__toggle"
            id="manualSalaryToggle"
            aria-expanded="false"
          >
            Need to override the salary?
          </button>
          <div class="manual-salary__body hidden" id="manualSalaryBody">
            <label class="field-label" for="currentSalary">Enter Salary Manually:</label>
            <input
              type="text"
              id="currentSalary"
              class="currency-input"
              value="$1,500,000"
              placeholder="$0"
              inputmode="decimal"
            />

            <label class="field-label override-label">Position:</label>
            <div class="toggle-switch toggle-switch--compact" id="positionToggleGroup">
              {extensionPositions.map(({ key }) => (
                <>
                  <input type="radio" id={`pos${key}`} name="position" value={key} checked={key === 'QB'} />
                  <label for={`pos${key}`}>{key}</label>
                </>
              ))}
            </div>

            <label class="field-label override-label">Years Remaining:</label>
            <div class="toggle-switch toggle-switch--compact" id="yearsContainer">
              {salaryTabs.map((years) => (
                <>
                  <input type="radio" id={`yr${years}`} name="yearsRemaining" value={years} checked={years === 3} />
                  <label for={`yr${years}`}>{years}</label>
                </>
              ))}
            </div>

            <button type="button" id="calculateBtn" class="recalculate-btn">Recalculate</button>
          </div>
        </div>
      </div>

      <div id="extensionLengthContainer">
        <label class="field-label">Extension Length:</label>
        <div class="toggle-switch toggle-switch--compact">
          <input type="radio" id="ext1" name="extensionLength" value="1" />
          <label for="ext1">1 Yr</label>
          <input type="radio" id="ext2" name="extensionLength" value="2" checked />
          <label for="ext2">2 Yr</label>
        </div>
      </div>

      <div id="comparisonContainer" class="salary-comparison-wrapper">
        <p class="comparison-placeholder">Select a player to view the current vs new contract summary.</p>
      </div>
      <code class="result" id="result">Use the calculator above, then generate your message here.</code>
    </div>

    <section class="salary-reference">
      <div class="salary-reference__panel">
        <h2>Extension Salaries<div class="salary-reference__subheading">(Top 5)</div></h2>
        <p>Used for rookie and veteran extensions.</p>
        <table>
          <thead>
            <tr>
              <th>Position</th>
              <th>Average Salary</th>
            </tr>
          </thead>
          <tbody id="extensionSalaryTable">
            {extensionPositions.map(({ key, label }) => (
              <tr data-position={key}>
                <td>{label}</td>
                <td data-extension-position={key}>
                  {currencyFormatter.format(initialSeasonData.extensionSalaries?.[key] ?? 0)}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
        <p class="salary-reference__disclaimer" id="extensionsDisclaimer">
          Current season values are estimates until the Week 14 snapshot is captured.
        </p>
      </div>
      <div class="salary-reference__panel">
        <h2>Franchise Tag Salaries<div class="salary-reference__subheading">(Top 3)</div></h2>
        <p>Franchise tags are locked to one-year deals.</p>
        <table>
          <thead>
            <tr>
              <th>Position</th>
              <th>Average Salary</th>
            </tr>
          </thead>
          <tbody id="franchiseSalaryTable">
            {extensionPositions.map(({ key, label }) => (
              <tr data-position={key}>
                <td>{label}</td>
                <td data-franchise-position={key}>
                  {currencyFormatter.format(initialSeasonData.franchiseSalaries?.[key] ?? 0)}
                </td>
              </tr>
            ))}
          </tbody>
        </table>
        <p class="salary-reference__disclaimer" id="franchiseDisclaimer">
          Current season values are estimates until the Week 14 snapshot is captured.
        </p>
      </div>
    </section>
  </section>
</Layout>

