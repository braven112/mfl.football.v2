<script type="module">
  const config = JSON.parse(
    document.getElementById('calculator-config').textContent
  );
  const {
    seasons = {},
    defaultSeason,
    seasonOptions = [],
    salaryTabs,
    positionKeys = [],
    latestActualSeason,
  } = config;

  const createSeasonState = (seasonKey, data = {}) => {
    const players = data.players ?? [];
    const playerLookupByLabel = new Map(
      players.map((player) => [player.label.toLowerCase(), player])
    );
    const playerLookupByName = new Map(
      players.map((player) => [player.name.toLowerCase(), player])
    );
    const playerById = new Map(players.map((player) => [player.id, player]));

    return {
      key: seasonKey,
      extensionSalaries: data.extensionSalaries ?? {},
      franchiseSalaries: data.franchiseSalaries ?? {},
      metadata: data.metadata ?? { season: seasonKey },
      players,
      playerLookupByLabel,
      playerLookupByName,
      playerById,
    };
  };

  const seasonStates = new Map(
    Object.entries(seasons).map(([seasonKey, data]) => [
      seasonKey,
      createSeasonState(seasonKey, data),
    ])
  );

  const orderedSeasons =
    seasonOptions?.length > 0
      ? seasonOptions
      : Array.from(seasonStates.keys());

  let currentSeasonKey =
    defaultSeason && seasonStates.has(defaultSeason)
      ? defaultSeason
      : orderedSeasons[0] ?? null;

  if (currentSeasonKey && !seasonStates.has(currentSeasonKey)) {
    seasonStates.set(currentSeasonKey, createSeasonState(currentSeasonKey));
  }

  let seasonState =
    (currentSeasonKey && seasonStates.get(currentSeasonKey)) ??
    createSeasonState(currentSeasonKey ?? 'default', {});

  const currencyFormatter = new Intl.NumberFormat('en-US', {
    style: 'currency',
    currency: 'USD',
    maximumFractionDigits: 0,
  });

  const formatCurrency = (value) => {
    if (!Number.isFinite(value)) return '$0';
    return currencyFormatter.format(Math.round(value));
  };

  const parseCurrency = (value) => {
    if (!value) return 0;
    const numeric = parseFloat(value.replace(/[^\d.-]/g, ''));
    return Number.isNaN(numeric) ? 0 : numeric;
  };

  const formatInput = (input) => {
    input.value = formatCurrency(parseCurrency(input.value));
  };

  document.addEventListener('DOMContentLoaded', () => {
    const playerSearchInput = document.getElementById('playerSearch');
    const currentSalaryInput = document.getElementById('currentSalary');
    const selectedPlayerDisplay = document.getElementById('selectedPlayerDisplay');
    const playerSuggestions = document.getElementById('playerSuggestions');
    const playerDetails = document.querySelector('.player-details');
    const manualOverridePanel = document.getElementById('manualSalaryPanel');
    const manualOverrideToggle = document.getElementById('manualSalaryToggle');
    const manualOverrideBody = document.getElementById('manualSalaryBody');
    const resultContainer = document.getElementById('result');
    const comparisonContainer = document.getElementById('comparisonContainer');
    const calculateBtn = document.getElementById('calculateBtn');
    const clearBtn = document.getElementById('clearPlayerBtn');
    const seasonSelect = document.getElementById('seasonSelect');
    const extensionTableBody = document.getElementById('extensionSalaryTable');
    const franchiseTableBody = document.getElementById('franchiseSalaryTable');
    const extensionDisclaimer = document.getElementById('extensionsDisclaimer');
    const franchiseDisclaimer = document.getElementById('franchiseDisclaimer');

    if (
      !playerSearchInput ||
      !currentSalaryInput ||
      !playerSuggestions ||
      !resultContainer ||
      !comparisonContainer ||
      !calculateBtn
    ) {
      return;
    }

    if (seasonSelect && currentSeasonKey) {
      seasonSelect.value = currentSeasonKey;
    }

    const defaultResultMessage = resultContainer.innerHTML;
    const defaultComparisonMessage = comparisonContainer.innerHTML;
    let selectedPlayer = null;
    let suppressManualSalaryUpdate = false;
    let manualOverrideOpen = false;

    manualOverrideToggle?.addEventListener('click', () => {
      manualOverrideOpen = !manualOverrideOpen;
      manualOverrideBody?.classList.toggle('hidden', !manualOverrideOpen);
      manualOverrideToggle?.setAttribute('aria-expanded', String(manualOverrideOpen));
    });

    const sortPlayers = (list) =>
      [...list].sort(
        (a, b) =>
          (b.points ?? 0) - (a.points ?? 0) ||
          a.name.localeCompare(b.name)
      );

    const getEligiblePlayers = () => {
      const type = document.querySelector('input[name="extType"]:checked').value;
      let filtered = seasonState?.players ?? [];
      if (type === 'transition') {
        filtered = filtered.filter((player) =>
          [2, 3, 4].includes(player.contractYears ?? 0)
        );
      } else if (type === 'franchise') {
        filtered = filtered.filter((player) => (player.contractYears ?? 0) === 1);
      } else if (type === 'rookie') {
        filtered = filtered.filter((player) => (player.draftYear ?? 0) >= 2026);
      }
      return sortPlayers(filtered);
    };

    const updateSelectionUi = () => {
      if (selectedPlayer) {
        playerDetails?.classList.remove('hidden');
      } else {
        playerDetails?.classList.add('hidden');
      }
    };

    const buildSuggestionMarkup = (playersToRender) =>
      playersToRender
        .map(
          (player) => `
        <button class="player-suggestion" type="button" data-player-id="${player.id}">
          ${
            player.icon
              ? `<img src="${player.icon}" alt="${player.teamName}" class="player-suggestion__icon" />`
              : '<div class="player-suggestion__icon"></div>'
          }
          <div class="player-suggestion__details">
            <span class="player-suggestion__name">${player.name} (${player.position})</span>
            <span class="player-suggestion__meta">
              <span>
                <img
                  src="https://www.mflscripts.com/ImageDirectory/script-images/nflTeamsvg_2/${player.nflTeam ??
                    'FA'}.svg"
                  alt="${player.nflTeam ?? 'FA'}"
                  class="player-suggestion__nfl-icon"
                />
              </span>
              <span>
                ${formatCurrency(player.salary)} • ${player.contractYears ?? 0} yr${
                  (player.contractYears ?? 0) === 1 ? '' : 's'
                }
              </span>
            </span>
          </div>
        </button>`
        )
        .join('');

    const updateSuggestions = () => {
      const eligiblePlayers = getEligiblePlayers();
      const query = playerSearchInput.value.trim().toLowerCase();
      const currentType = document.querySelector(
        'input[name="extType"]:checked'
      ).value;
      const normalizedSelected = selectedPlayer?.label?.toLowerCase();

      let matches = eligiblePlayers;
      let teamSpecific = false;

      if (query) {
        if (
          normalizedSelected &&
          normalizedSelected.startsWith(query) &&
          selectedPlayer
        ) {
          matches = eligiblePlayers.filter(
            (player) => player.id === selectedPlayer.id
          );
          if (!matches.length) {
            matches = [selectedPlayer];
          }
        } else if (currentType !== 'rookie') {
          const teamMatches = eligiblePlayers.filter((player) =>
            (player.teamTokens ?? []).some((token) => token.includes(query))
          );
          if (teamMatches.length) {
            matches = teamMatches;
            teamSpecific = true;
          } else {
            matches = eligiblePlayers.filter((player) =>
              player.searchBlob.includes(query)
            );
          }
        } else {
          matches = eligiblePlayers.filter((player) =>
            player.searchBlob.includes(query)
          );
        }
      }

      const limit = query
        ? teamSpecific
          ? matches.length
          : 30
        : currentType === 'rookie'
          ? 30
          : 12;
      matches = matches.slice(0, limit);

      if (!matches.length) {
        const message =
          currentType === 'rookie'
            ? 'Only players drafted by their original team in 2026 and beyond are available.'
            : 'No eligible players';
        playerSuggestions.innerHTML = `<div class="player-suggestion empty" type="button">${message}</div>`;
        playerSuggestions.classList.remove('hidden');
        return eligiblePlayers;
      }

      playerSuggestions.innerHTML = buildSuggestionMarkup(matches);
      if (matches.length) {
        playerSuggestions.classList.remove('hidden');
      } else {
        playerSuggestions.classList.add('hidden');
      }
      return eligiblePlayers;
    };

    const selectPositionRadio = (position) => {
      if (!position) return;
      const radio = document.getElementById(`pos${position}`);
      if (radio) {
        radio.checked = true;
      }
    };

    const updateReferenceTables = () => {
      const extensionValues = seasonState?.extensionSalaries ?? {};
      const franchiseValues = seasonState?.franchiseSalaries ?? {};
      positionKeys.forEach((key) => {
        const extCell = extensionTableBody?.querySelector(
          `[data-extension-position="${key}"]`
        );
        if (extCell) {
          extCell.textContent = formatCurrency(extensionValues[key] ?? 0);
        }
        const franCell = franchiseTableBody?.querySelector(
          `[data-franchise-position="${key}"]`
        );
        if (franCell) {
          franCell.textContent = formatCurrency(franchiseValues[key] ?? 0);
        }
      });

      const fallbackLatest =
        Array.from(seasonStates.keys())
          .sort((a, b) => Number(b) - Number(a))[0] ?? currentSeasonKey;
      const showDisclaimer = latestActualSeason
        ? currentSeasonKey === latestActualSeason
        : currentSeasonKey === fallbackLatest;
      extensionDisclaimer?.classList.toggle('hidden', !showDisclaimer);
      franchiseDisclaimer?.classList.toggle('hidden', !showDisclaimer);
    };

    const resetComparison = () => {
      comparisonContainer.innerHTML = defaultComparisonMessage;
    };

    const getReferenceSalary = (position, type) => {
      if (type === 'franchise') {
        return seasonState?.franchiseSalaries?.[position] ?? 0;
      }
      return seasonState?.extensionSalaries?.[position] ?? 0;
    };

    const calculateExtension = () => {
      const salary = parseCurrency(currentSalaryInput.value);
      const selectedYearsInput = Number(
        document.querySelector('input[name="yearsRemaining"]:checked')?.value ?? 0
      );
      let yearsRemaining = selectedYearsInput;
      const position = document.querySelector('input[name="position"]:checked').value;
      const extensionType = document.querySelector('input[name="extType"]:checked').value;
      const manualOverrideActive = manualOverrideOpen;
      const extensionLength =
        extensionType === 'rookie'
          ? 2
          : extensionType === 'franchise'
            ? 1
            : Number(document.querySelector('input[name="extensionLength"]:checked').value);
      let avgSalary = getReferenceSalary(position, extensionType);
      let referenceLabel = 'Top Average';

      if (extensionType === 'transition') {
        if (manualOverrideActive || !selectedPlayer) {
          yearsRemaining = selectedYearsInput || yearsRemaining || 2;
        } else {
          yearsRemaining = selectedPlayer?.contractYears ?? yearsRemaining ?? 0;
          if (!yearsRemaining) {
            yearsRemaining = 2;
          }
        }
      } else if (extensionType === 'rookie') {
        yearsRemaining = selectedYearsInput || yearsRemaining || 3;
      }

      if (extensionType === 'franchise') {
        const increaseSalary = salary * 1.2;
        const appliedSalary = Math.max(increaseSalary, avgSalary);
        avgSalary = appliedSalary;
        referenceLabel =
          appliedSalary === increaseSalary ? '20% Increase' : 'Top Average';
      }

      let newSalary = 0;
      let totalYears = extensionLength;
      if (extensionType === 'franchise') {
        totalYears = 1;
        newSalary = Math.round(avgSalary);
      } else {
        const totalExtensionValue = avgSalary * extensionLength;
        const baseYears = yearsRemaining;
        totalYears = baseYears + extensionLength;
        newSalary = Math.round(
          salary + totalExtensionValue / Math.max(totalYears, 1)
        );
      }
      const label =
        extensionType === 'franchise'
          ? 'Franchise Tag'
          : extensionType === 'rookie'
            ? 'Rookie Extension'
            : 'Transition Extension';
      const playerNameLabel = selectedPlayer?.name
        ? `${selectedPlayer.name} (${selectedPlayer.position})`
        : 'Player';

      const baseContractYears =
        selectedPlayer?.contractYears ?? selectedYearsInput ?? 0;
      const currentYearsLabel =
        baseContractYears > 0 ? `${baseContractYears} year(s)` : 'Manual Entry';
      const newYearsLabel = `${totalYears} year(s)`;
      const bbcode = `[b]${playerNameLabel}[/b]
[b]${label}[/b]
Position: ${position}
Term: ${extensionLength} year(s)
New Salary: ${formatCurrency(newSalary)}
Total Contract Length: ${totalYears} years
Reference: ${referenceLabel}`;

      const nflTeamCode = (selectedPlayer?.nflTeam || 'FA').toUpperCase();
      const nflLogoUrl = `https://www.mflscripts.com/ImageDirectory/script-images/nflTeamsvg_2/${nflTeamCode}.svg`;
      const nflLogoMarkup = `<img src="${nflLogoUrl}" alt="${nflTeamCode}" class="salary-table__nfl-logo" />`;
      const franchiseIcon = selectedPlayer?.icon ?? null;
      const iconMarkup = franchiseIcon
        ? `<img src="${franchiseIcon}" alt="${selectedPlayer?.teamName ?? 'Team'}" class="salary-table__icon" />`
        : '<span class="salary-table__icon placeholder"></span>';
      const seasonLabel = seasonState?.metadata?.season ?? currentSeasonKey ?? '';

      const buildTable = ({
        title,
        subtitle,
        salaryLabel,
        salaryValue,
        salaryClass = '',
        yearsValue,
        positionValue,
        showFranchiseIcon = false,
      }) => `
        <div class="salary-table">
          <div class="salary-table__icon-wrapper">
            ${
              showFranchiseIcon
                ? iconMarkup
                : '<span class="salary-table__icon placeholder"></span>'
            }
          </div>
          <table>
            <caption>${title}</caption>
            <tbody>
              ${
                subtitle
                  ? `<tr class="salary-table__subtitle"><td>${subtitle}</td></tr>`
                  : ''
              }
              <tr>
                
                <td class="salary-table__player">${nflLogoMarkup} ${playerNameLabel}</td>
              </tr>
              <tr>
               
                <td class="${salaryClass}">${salaryValue}</td>
              </tr>
              <tr>
              
                <td>${yearsValue}</td>
              </tr>
              <tr>
              
                <td>${positionValue}</td>
              </tr>
            </tbody>
          </table>
        </div>`;

      comparisonContainer.innerHTML = `
        <div class="salary-comparison">
          ${buildTable({
            title: 'Current Deal',
            subtitle: seasonLabel ? `Season ${seasonLabel}` : '',
            salaryLabel: 'Salary',
            salaryValue: formatCurrency(salary),
            yearsValue: currentYearsLabel,
            positionValue: selectedPlayer?.position ?? position,
            showFranchiseIcon: true,
          })}
          ${buildTable({
            title: 'New Deal',
            subtitle: `${label} (${referenceLabel})`,
            salaryLabel: 'New Salary',
            salaryValue: formatCurrency(newSalary),
            salaryClass: 'salary-table__value--new',
            yearsValue: newYearsLabel,
            positionValue: selectedPlayer?.position ?? position,
            showFranchiseIcon: true,
          })}
        </div>`;

      resultContainer.innerHTML = `
        <strong>Results:</strong><br/>
        <span class="result-player">${playerNameLabel}</span><br/>
        New Salary: ${formatCurrency(newSalary)}<br/>
        Total Contract Length: ${totalYears} years<br/>
        Reference Salary Used: ${formatCurrency(avgSalary)} (${referenceLabel})
        <div class="bbcode" id="bbcodeOutput">${bbcode}</div>
        <button type="button" id="copyBtn">Copy Message Board Post</button>
      `;

      resultContainer
        .querySelector('#copyBtn')
        ?.addEventListener('click', () => {
          navigator.clipboard
            .writeText(bbcode)
            .then(() => alert('BBCode copied!'))
            .catch(() => alert('Unable to copy BBCode.'));
        });
    };

    const setSelectedPlayer = (player) => {
      selectedPlayer = player;
      if (player) {
        suppressManualSalaryUpdate = true;
        currentSalaryInput.value = formatCurrency(player.salary);
        setTimeout(() => {
          suppressManualSalaryUpdate = false;
        }, 0);
        selectedPlayerDisplay.textContent = `Using salary for ${player.name} (${player.position})`;
        selectedPlayerDisplay.classList.remove('hidden');
        playerSearchInput.value = player.label;
        playerSuggestions.classList.add('hidden');
        playerSuggestions.innerHTML = '';
        selectPositionRadio(player.position);
      } else {
        selectedPlayerDisplay.classList.add('hidden');
        selectedPlayerDisplay.textContent = '';
        resultContainer.innerHTML = defaultResultMessage;
        resetComparison();
        playerSuggestions.innerHTML = '';
        playerSuggestions.classList.add('hidden');
      }
      updateSelectionUi();
      if (selectedPlayer) {
        calculateExtension();
      }
    };

    const handlePlayerSelection = () => {
      const key = playerSearchInput.value.trim();
      if (!key) {
        setSelectedPlayer(null);
        return;
      }
      const normalized = key.toLowerCase();
      const playerLookupByLabel =
        seasonState?.playerLookupByLabel ?? new Map();
      const playerLookupByName =
        seasonState?.playerLookupByName ?? new Map();
      const player =
        playerLookupByLabel.get(normalized) ||
        playerLookupByName.get(normalized) ||
        null;
      setSelectedPlayer(player);
    };

    const toggleExtensionLength = () => {
      const container = document.getElementById('extensionLengthContainer');
      const type = document.querySelector('input[name="extType"]:checked').value;
      const showExtensionLength = type === 'transition';
      container.classList.toggle('hidden', !showExtensionLength);
      if (type === 'rookie') {
        document.getElementById('ext2').checked = true;
      }
      const eligiblePlayers = updateSuggestions();
      if (
        selectedPlayer &&
        !eligiblePlayers.some((player) => player.label === selectedPlayer.label)
      ) {
        setSelectedPlayer(null);
        playerSearchInput.value = '';
      }
      updateSelectionUi();
    };

    document.querySelectorAll('.currency-input').forEach((input) => {
      input.addEventListener('blur', () => formatInput(input));
    });

    playerSearchInput.addEventListener('change', handlePlayerSelection);
    playerSearchInput.addEventListener('blur', () => {
      handlePlayerSelection();
      setTimeout(() => playerSuggestions.classList.add('hidden'), 120);
    });
    playerSearchInput.addEventListener('focus', () => {
      playerSearchInput.select();
      updateSuggestions();
    });
    playerSearchInput.addEventListener('input', () => {
      updateSuggestions();
      const currentValue = playerSearchInput.value.trim();
      if (!currentValue) {
        setSelectedPlayer(null);
      } else if (selectedPlayer && currentValue !== selectedPlayer.label) {
        setSelectedPlayer(null);
      }
    });

    clearBtn?.addEventListener('click', () => {
      playerSearchInput.value = '';
      setSelectedPlayer(null);
      playerSearchInput.focus();
      updateSuggestions();
    });

    currentSalaryInput.addEventListener('input', () => {
      if (suppressManualSalaryUpdate) return;
      if (!manualOverrideOpen) {
        setSelectedPlayer(null);
        playerSearchInput.value = '';
      }
    });

    document.querySelectorAll('input[name="extType"]').forEach((radio) => {
      radio.addEventListener('change', toggleExtensionLength);
    });

    const handleYearsChange = () => {
      const type = document.querySelector('input[name="extType"]:checked')?.value;
      if (type === 'transition' && selectedPlayer) {
        calculateExtension();
      }
    };

    document.querySelectorAll('input[name="yearsRemaining"]').forEach((radio) => {
      radio.addEventListener('change', handleYearsChange);
    });

    const handleSeasonChange = (seasonKey) => {
      if (!seasonKey || !seasonStates.has(seasonKey) || seasonKey === currentSeasonKey) {
        return;
      }
      currentSeasonKey = seasonKey;
      seasonState = seasonStates.get(seasonKey);
      playerSearchInput.value = '';
      setSelectedPlayer(null);
      updateReferenceTables();
      updateSuggestions();
    };

    seasonSelect?.addEventListener('change', (event) => {
      handleSeasonChange(event.target.value);
    });

    calculateBtn.addEventListener('click', calculateExtension);

    playerSuggestions.addEventListener('mousedown', (event) => event.preventDefault());
    playerSuggestions.addEventListener('click', (event) => {
      const target = event.target.closest('[data-player-id]');
      if (!target) return;
      const player = seasonState?.playerById?.get(target.dataset.playerId);
      if (player) {
        setSelectedPlayer(player);
      }
    });

    updateReferenceTables();
    updateSuggestions();
    toggleExtensionLength();
  });
</script>
