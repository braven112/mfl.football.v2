---
import TheLeagueHeader from '../components/theleague/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	host?: string;
	leagueId?: string;
	year?: string | number;
	staticHost?: string;
}

const { title, host, leagueId, year, staticHost } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<TheLeagueHeader {host} {leagueId} {year} {staticHost} />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	:root {
		--primary-color: #1c497c;
		--secondary-color: #2e8743;
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--primary-content-bg-color: #ffffff;
		--primary-content-border-color: #e2e8f0;
		--primary-content-boxshadow-size: 0 2px 6px rgba(0, 0, 0, 0.05);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		background-color: #f5f5f5;
	}

	body {
		margin: 0;
		min-height: 100vh;
		display: flex;
		flex-direction: column;
	}

	:global(h1) {
		font-size: var(--font-size-xl);
		color: var(--primary-color);
	}

	:global(h2) {
		font-size: var(--font-size-lg);
		color: var(--primary-color);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
		background: #f5f5f5;
		padding: 0.125rem 0.25rem;
		border-radius: 0.25rem;
	}

	:global(a) {
		color: var(--primary-color);
		text-decoration: none;
	}

	:global(a:hover) {
		color: var(--secondary-color);
		text-decoration: underline;
	}

	:global(a:focus) {
		color: var(--secondary-color);
		text-decoration: underline;
	}

	main {
		flex: 1;
	}

	main {
		margin-inline: auto;
		margin-block: 0;
		max-width: 1232px;
		display: block;
		padding: 1rem 1.5rem 5rem;
	}

	@media (max-width: 768px) {
		main {
			padding: 1rem 1rem 4rem;
		}
	}
</style>
